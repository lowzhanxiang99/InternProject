<div class="monitoring-container">
    <div class="container-fluid">
        <!-- Header -->
        <div class="monitoring-header">
            <div class="header-left">
                <h1>Employee Attendance Monitoring</h1>
            </div>
        </div>

        <!-- Top 7 Cards Section -->
        <div class="top-cards-section">
            <!-- Card 1: Real-time Insights (Big Card) -->
            <div class="big-card">
                <div class="stat-card">
                    <div class="real-time-header">
                        <div>
                            <div class="digital-time-display digital-clock">
                                <span id="digital-time">@DateTime.Now.ToString("hh:mm:ss")</span>
                                <span id="am-pm">@DateTime.Now.ToString("tt").ToUpper()</span>
                            </div>
                            <div class="real-time-insights-title insights-title">
                                Real-time Insights
                            </div>
                            <div class="date-display current-date">
                                <div class="today-label">Today:</div>
                                <div class="full-date" id="formatted-date">
                                    @{
                                        var today = DateTime.Now;
                                        var day = today.Day;
                                        var daySuffix = GetDaySuffix(day);
                                        var formattedDate = $"{day}{daySuffix} {today:MMMM yyyy} {today:dddd}";
                                    }
                                    @formattedDate
                                </div>
                            </div>
                        </div>
                    </div>

                    <a href="@Url.Action("AttendanceOverview")" class="view-attendance-btn">
                        <i class="bi bi-eye me-2"></i>View Attendance
                    </a>
                </div>
            </div>

            <!-- Card 2: Total Employees -->
            <div class="regular-card card-2">
                <div class="stat-card">
                    <div class="stat-icon icon-total">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="stat-number">@Model.TotalEmployees</div>
                    <div class="stat-label">Total Employees</div>
                    <div class="trend-indicator @(Model.TrendDirection == "up" ? "trend-up" : Model.TrendDirection == "down" ? "trend-down" : "")">
                        @if (Model.TrendDirection == "up")
                        {
                            <i class="bi bi-arrow-up me-1"></i>
                        }
                        else if (Model.TrendDirection == "down")
                        {
                            <i class="bi bi-arrow-down me-1"></i>
                        }
                        else
                        {
                            <i class="bi bi-dash me-1"></i>
                        }
                        <span>@Model.EmployeeTrend</span>
                    </div>
                </div>
            </div>

            <!-- Card 3: On Time -->
            <div class="regular-card card-3">
                <div class="stat-card">
                    <div class="stat-icon icon-ontime">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="stat-number">
                        @{
                            // On-time = Present - Late (already calculated in controller)
                            var onTimeCountFromController = Model.PresentCount - Model.LateCount;
                        }
                        @onTimeCountFromController
                    </div>
                    <div class="stat-label">On Time</div>
                    @if (Model.PresentCount > 0)
                    {
                        var onTimePercentage = Math.Round((double)onTimeCountFromController / Model.PresentCount * 100, 1);
                        <div class="trend-indicator @(onTimePercentage >= 80 ? "trend-up" : "trend-down")">
                            @if (onTimePercentage >= 80)
                            {
                                <i class="bi bi-arrow-up me-1"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down me-1"></i>
                            }
                            <span>@onTimePercentage% of present</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Card 4: Absent -->
            <div class="regular-card card-4">
                <div class="stat-card">
                    <div class="stat-icon icon-absent">
                        <i class="bi bi-x-circle"></i>
                    </div>
                    <div class="stat-number">@Model.AbsentCount</div>  <!-- Use from Model -->
                    <div class="stat-label">Absent</div>
                    @if (Model.TotalEmployees > 0)
                    {
                        var absentPercentage = Math.Round((double)Model.AbsentCount / Model.TotalEmployees * 100, 1);
                        <div class="trend-indicator @(absentPercentage < 10 ? "trend-down" : "trend-up")">
                            @if (absentPercentage < 10)
                            {
                                <i class="bi bi-arrow-down me-1"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-up me-1"></i>
                            }
                            <span>@absentPercentage% of total</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Card 5: Late Arrival -->
            <div class="regular-card card-5">
                <div class="stat-card">
                    <div class="stat-icon icon-late">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <div class="stat-number">@Model.LateCount</div>  <!-- Already using Model -->
                    <div class="stat-label">Late Arrival</div>
                    @if (Model.PresentCount > 0)
                    {
                        var latePercentage = Math.Round((double)Model.LateCount / Model.PresentCount * 100, 1);
                        <div class="trend-indicator @(latePercentage < 15 ? "trend-down" : "trend-up")">
                            @if (latePercentage < 15)
                            {
                                <i class="bi bi-arrow-down me-1"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-up me-1"></i>
                            }
                            <span>@latePercentage% of present</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Card 6: Early Departures -->
            <div class="regular-card card-6">
                <div class="stat-card">
                    <div class="stat-icon icon-early">
                        <i class="bi bi-box-arrow-left"></i>
                    </div>
                    <div class="stat-number">@earlyDeparturesCount</div>
                    <div class="stat-label">Early Departures</div>
                    @{
                        var earlyDeparturePercentage = presentCount > 0 ? 
                            Math.Round((double)earlyDeparturesCount / presentCount * 100, 1) : 0;
                        <div class="trend-indicator @(earlyDeparturePercentage < 5 ? "trend-down" : "trend-up")">
                            @if(earlyDeparturePercentage < 5) {
                                <i class="bi bi-arrow-down me-1"></i>
                            } else {
                                <i class="bi bi-arrow-up me-1"></i>
                            }
                            <span>@earlyDeparturePercentage% of present</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Card 7: Time-off -->
            <div class="regular-card card-7">
                <div class="stat-card">
                    <div class="stat-icon icon-timeoff">
                        <i class="bi bi-calendar-x"></i>
                    </div>
                    <div class="stat-number">@timeOffCount</div>
                    <div class="stat-label">Time-off</div>
                    @if (totalEmployees > 0)
                    {
                        var timeOffPercentage = Math.Round((double)timeOffCount / totalEmployees * 100, 1);
                        <div class="trend-indicator @(timeOffPercentage < 10 ? "trend-down" : "trend-up")">
                            @if(timeOffPercentage < 10) {
                                <i class="bi bi-arrow-down me-1"></i>
                            } else {
                                <i class="bi bi-arrow-up me-1"></i>
                            }
                            <span>@timeOffPercentage% of total</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Bottom 2 Chart Cards -->
        <div class="bottom-charts-section">
            <!-- Chart 1: Attendance Comparison Chart -->
            <div class="chart-card">
                <div class="stat-card">
