        // Function to update digital clock
        function updateDigitalClock() {
            const now = new Date();
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const seconds = now.getSeconds().toString().padStart(2, '0');
            const ampm = hours >= 12 ? 'PM' : 'AM';
            const hour12 = (hours % 12 || 12).toString().padStart(2, '0');

            const digitalTimeElement = document.getElementById('digital-time');
            const amPmElement = document.getElementById('am-pm');

            if (digitalTimeElement) {
                digitalTimeElement.textContent = `${hour12}:${minutes}:${seconds}`;
            }
            if (amPmElement) {
                amPmElement.textContent = ampm;
            }
        }

        function updateDateDisplay() {
            const now = new Date();
            const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            const months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];

            const day = now.getDate();
            const dayName = days[now.getDay()];
            const monthName = months[now.getMonth()];
            const year = now.getFullYear();

            function getDaySuffix(day) {
                if (day >= 11 && day <= 13) return "th";
                switch (day % 10) {
                    case 1: return "st";
                    case 2: return "nd";
                    case 3: return "rd";
                    default: return "th";
                }
            }

            const daySuffix = getDaySuffix(day);
            const formattedDate = `${day}${daySuffix} ${monthName} ${year} ${dayName}`;

            const dateDisplayElement = document.getElementById('formatted-date');
            if (dateDisplayElement) {
                dateDisplayElement.innerHTML = formattedDate;
            }
        }

