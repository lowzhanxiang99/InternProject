@model InternProject1.Models.EmployeeMonitoringViewModel

@{
    ViewData["Title"] = "Employee Attendance Monitoring";
    Layout = "_Layout";

    // CALCULATIONS BLOCK
    var totalEmployees = Model.Employees.Count;
    var presentCount = Model.TodayAttendance.Count(a => a.ClockInTime != null);
    var onTimeCount = Model.TodayAttendance.Count(a => a.ClockInTime != null &&
        (a.ClockInTime.Value.Hours < 9 || (a.ClockInTime.Value.Hours == 9 && a.ClockInTime.Value.Minutes == 0)));
    var lateCount = Model.TodayAttendance.Count(a => a.ClockInTime != null &&
        !(a.ClockInTime.Value.Hours < 9 || (a.ClockInTime.Value.Hours == 9 && a.ClockInTime.Value.Minutes == 0)));
    var absentCount = totalEmployees - presentCount;

    var earlyDeparturesCount = Model.TodayAttendance.Count(a =>
        a.ClockOutTime != null &&
        a.ClockOutTime.Value.Hours < 17 &&
        !(a.ClockOutTime.Value.Hours == 16 && a.ClockOutTime.Value.Minutes == 0));

    var timeOffCount = 0; // Replace with actual calculation

    // Get current week number
    var currentWeekNumber = GetWeekOfYear(DateTime.Now);
}

@functions {
    // Helper function to get week number
    public int GetWeekOfYear(DateTime date)
    {
        var calendar = System.Globalization.CultureInfo.CurrentCulture.Calendar;
        return calendar.GetWeekOfYear(
            date,
            System.Globalization.CalendarWeekRule.FirstFourDayWeek,
            DayOfWeek.Monday);
    }
}

