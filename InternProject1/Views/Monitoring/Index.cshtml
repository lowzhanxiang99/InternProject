<div class="monitoring-container">
    <div class="container-fluid">
        <!-- Header -->
        <div class="monitoring-header">
            <div class="header-left">
                <h1>Employee Attendance Dashboard</h1>
            </div>
        </div>

        <!-- Top 7 Cards Section -->
        <div class="top-cards-section">
            <!-- Card 1: Real-time Insights (Big Card) -->
            <div class="big-card">
                <div class="stat-card">
                    <div class="real-time-header">
                        <div>
                            <h3 class="stat-label">Real-time Insights</h3>
                            <div class="date-display">
                                Today: <span class="day-name">@DateTime.Now.DayOfWeek</span>, 
                                @DateTime.Now.ToString("MMMM dd, yyyy")
                            </div>
                        </div>
                    </div>
                    
                    <a href="#" class="view-attendance-btn">
                        <i class="bi bi-eye me-2"></i>View Detailed Attendance
                    </a>
                </div>
            </div>

            <!-- Card 2: Total Employees -->
            <div class="regular-card card-2">
                <div class="stat-card">
                    <div class="stat-icon icon-total">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="stat-number">@totalEmployees</div>
                    <div class="stat-label">Total Employees</div>
                    <div class="trend-indicator trend-up">
                        <i class="bi bi-arrow-up me-1"></i>
                        <span>+5% from last month</span>
                    </div>
                </div>
            </div>

            <!-- Card 3: On Time -->
            <div class="regular-card card-3">
                <div class="stat-card">
                    <div class="stat-icon icon-ontime">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="stat-number">@onTimeCount</div>
                    <div class="stat-label">On Time Today</div>
                    @if (totalEmployees > 0)
                    {
                        var onTimePercentage = Math.Round((double)onTimeCount / totalEmployees * 100, 1);
                        <div class="trend-indicator @(onTimePercentage >= 80 ? "trend-up" : "trend-down")">
                            @if(onTimePercentage >= 80) {
                                <i class="bi bi-arrow-up me-1"></i>
                            } else {
                                <i class="bi bi-arrow-down me-1"></i>
                            }
                            <span>@onTimePercentage% of total</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Card 4: Absent -->
            <div class="regular-card card-4">
                <div class="stat-card">
                    <div class="stat-icon icon-absent">
                        <i class="bi bi-x-circle"></i>
                    </div>
                    <div class="stat-number">@absentCount</div>
                    <div class="stat-label">Absent Today</div>
                    @if (totalEmployees > 0)
                    {
                        var absentPercentage = Math.Round((double)absentCount / totalEmployees * 100, 1);
                        <div class="trend-indicator @(absentPercentage < 10 ? "trend-down" : "trend-up")">
                            @if(absentPercentage < 10) {
                                <i class="bi bi-arrow-down me-1"></i>
                            } else {
                                <i class="bi bi-arrow-up me-1"></i>
                            }
                            <span>@absentPercentage% of total</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Card 5: Late Arrival -->
            <div class="regular-card card-5">
                <div class="stat-card">
                    <div class="stat-icon icon-late">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <div class="stat-number">@lateCount</div>
                    <div class="stat-label">Late Arrival</div>
                    @if (presentCount > 0)
                    {
                        var latePercentage = Math.Round((double)lateCount / presentCount * 100, 1);
                        <div class="trend-indicator @(latePercentage < 15 ? "trend-down" : "trend-up")">
                            @if(latePercentage < 15) {
                                <i class="bi bi-arrow-down me-1"></i>
                            } else {
                                <i class="bi bi-arrow-up me-1"></i>
                            }
                            <span>@latePercentage% of present</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Card 6: Early Departures -->
            <div class="regular-card card-6">
                <div class="stat-card">
                    <div class="stat-icon icon-early">
                        <i class="bi bi-box-arrow-left"></i>
                    </div>
                    <div class="stat-number">@earlyDeparturesCount</div>
                    <div class="stat-label">Early Departures</div>
                    @{
                        var earlyDeparturePercentage = presentCount > 0 ? 
                            Math.Round((double)earlyDeparturesCount / presentCount * 100, 1) : 0;
                        <div class="trend-indicator @(earlyDeparturePercentage < 5 ? "trend-down" : "trend-up")">
                            @if(earlyDeparturePercentage < 5) {
                                <i class="bi bi-arrow-down me-1"></i>
                            } else {
                                <i class="bi bi-arrow-up me-1"></i>
                            }
                            <span>@earlyDeparturePercentage% of present</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Card 7: Time-off -->
            <div class="regular-card card-7">
                <div class="stat-card">
                    <div class="stat-icon icon-timeoff">
                        <i class="bi bi-calendar-x"></i>
                    </div>
                    <div class="stat-number">@timeOffCount</div>
                    <div class="stat-label">Time-off Today</div>
                    @if (totalEmployees > 0)
                    {
                        var timeOffPercentage = Math.Round((double)timeOffCount / totalEmployees * 100, 1);
                        <div class="trend-indicator @(timeOffPercentage < 10 ? "trend-down" : "trend-up")">
                            @if(timeOffPercentage < 10) {
                                <i class="bi bi-arrow-down me-1"></i>
                            } else {
                                <i class="bi bi-arrow-up me-1"></i>
                            }
                            <span>@timeOffPercentage% of total</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Bottom 2 Chart Cards -->
        <div class="bottom-charts-section">
            <!-- Chart 1: Attendance Comparison Chart -->
            <div class="chart-card">
                <div class="stat-card">
                    <div class="chart-header">
                        <h4>Attendance Comparison</h4>
                        <select class="form-select form-select-sm" style="width: auto;">
                            <option>This Week</option>
                            <option>Last Week</option>
                            <option>This Month</option>
                        </select>
                    </div>
                    <div class="chart-container" id="attendanceComparisonChart">
                        <!-- Attendance comparison chart (line or bar chart comparing different periods) -->
                        <div class="placeholder-chart">
                            <div class="text-center py-5">
                                <i class="bi bi-graph-up fs-1 text-muted mb-3"></i>
                                <p class="text-muted">Attendance Comparison Chart</p>
                                <small>Comparing current vs previous period</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chart 2: Weekly Attendance Bar Chart -->
            <div class="chart-card">
                <div class="stat-card">
                    <div class="chart-header">
                        <h4>Weekly Attendance</h4>
                        <div class="text-muted" style="font-size: 14px;">
                            Week @currentWeekNumber
                        </div>
                    </div>
                    <div class="chart-container" id="weeklyAttendanceChart">
                        <!-- Weekly attendance bar chart -->
                        <div class="placeholder-chart">
                            <div class="text-center py-5">
                                <i class="bi bi-bar-chart fs-1 text-muted mb-3"></i>
                                <p class="text-muted">Weekly Attendance Bar Chart</p>
                                <small>Daily attendance for the current week</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

