@model IEnumerable<InternProject1.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Approval History";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int rowCount = ((currentPage - 1) * 10) + 1;
}

<div class="container-fluid py-4" style="background-color: #f4f7f6; min-height: 100vh;">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- ENTITLEMENT MANAGEMENT CARD --- *@
    <div class="card border-0 shadow-sm mb-4 rounded-4 bg-white">
        <div class="card-body py-4">
            <div class="d-flex justify-content-between align-items-center mb-1">
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-gear text-primary fs-4 me-2"></i>
                    <h5 class="fw-bold m-0">Manage Employee Entitlements</h5>
                </div>

                <div class="input-group shadow-sm" style="max-width: 300px;">
                    <span class="input-group-text bg-white border-primary-subtle rounded-start">
                        <i class="bi bi-search text-primary"></i>
                    </span>
                    <input type="text" id="employeeSearchInput" class="form-control border-primary-subtle py-1"
                           placeholder="Filter employee list...">
                </div>
            </div>
            <p class="text-muted small mb-4">Search and select an employee to adjust their leave balances manually.</p>

            <div class="row g-3 align-items-end">
                <div class="col-md-9">
                    <label class="form-label small fw-bold text-secondary">Target Employee</label>
                    <select id="employeeSelect" class="form-select border-primary-subtle py-2 shadow-sm">
                        <option value="">-- Choose Employee --</option>
                        @if (ViewBag.EmployeeList != null)
                        {
                            @foreach (var emp in ViewBag.EmployeeList as IEnumerable<InternProject1.Models.Employee>)
                            {
                                <option value="@emp.Employee_ID">@emp.First_Name @emp.Last_Name (ID: @emp.Employee_ID)</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="button" id="editBtn" class="btn btn-primary w-100 py-2 rounded-3 shadow-sm">
                        <i class="bi bi-pencil-square me-2"></i> Edit Balances
                    </button>
                </div>
            </div>
        </div>
    </div>

    @* --- APPROVAL HISTORY CARD --- *@
    <div class="card border-0 shadow-sm p-4 rounded-4 bg-white">
        <form method="get" asp-action="Approval">
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
                <h5 class="fw-bold m-0">Leave Approval History</h5>
                <div class="d-flex flex-wrap gap-3 align-items-center">
                    <div class="d-flex gap-2 align-items-center bg-light px-3 py-2 rounded-3 border">
                        <span class="small text-muted fw-bold">From:</span>
                        <input type="date" name="fromDate" value="@ViewBag.FromDate" class="border-0 bg-transparent small" onchange="this.form.submit()" />
                        <span class="small text-muted fw-bold">To:</span>
                        <input type="date" name="toDate" value="@ViewBag.ToDate" class="border-0 bg-transparent small" onchange="this.form.submit()" />
                    </div>
                    <button type="button" onclick="exportData()" class="btn btn-success btn-sm px-4 rounded-3 shadow-sm border-0">
                        <i class="bi bi-file-earmark-excel me-1"></i> Export Excel
                    </button>
                </div>
            </div>

            <div class="input-group mb-4 shadow-sm" style="max-width: 400px;">
                <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control border-end-0 py-2" placeholder="Search name, ID or leave type..." />
                <button type="submit" class="btn btn-white border border-start-0 text-primary">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="text-secondary small border-bottom bg-light">
                    <tr>
                        <th class="ps-3 py-3">No.</th>
                        <th>Request ID</th>
                        <th>Status</th>
                        <th>Type</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th class="text-center">Proof</th>
                        <th colspan="2">Employee Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.Status == "Pending" ? "table-primary-subtle fw-semibold" : "") align-middle hover-row">
                            <td class="ps-3 text-muted small">@(rowCount++)</td>
                            <td class="text-primary fw-bold">REQ-@item.Leave_ID</td>
                            <td>
                                @if (item.Status == "Approve")
                                {
                                    <span class="badge bg-success-subtle text-success rounded-pill px-3">Approved</span>
                                }
                                else if (item.Status == "Reject")
                                {
                                    <span class="badge bg-danger-subtle text-danger rounded-pill px-3">Rejected</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3 shadow-sm">
                                        <i class="bi bi-clock-history me-1"></i> Pending
                                    </span>
                                }
                            </td>
                            <td><span class="badge bg-light text-dark border">@item.LeaveType</span></td>
                            <td class="small text-muted">@item.Start_Date.ToString("dd MMM yyyy")</td>
                            <td class="small text-muted">@item.End_Date.ToString("dd MMM yyyy")</td>

                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.AttachmentPath))
                                {
                                    <button class="btn btn-outline-primary btn-sm rounded-pill px-3" onclick="previewImage('@item.AttachmentPath')">
                                        <i class="bi bi-paperclip me-1"></i> View MC
                                    </button>
                                }
                                else
                                {
                                    <span class="text-muted small italic">-</span>
                                }
                            </td>

                            <td colspan="2" style="cursor: pointer;" onclick="viewLeaveDetails(@item.Leave_ID)">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm me-2 bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                        @item.Employee?.First_Name[0]@item.Employee?.Last_Name[0]
                                    </div>
                                    <span class="text-primary text-decoration-underline fw-bold">@item.Employee?.First_Name @item.Employee?.Last_Name</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* --- PAGINATION --- *@
        @if (totalPages > 1)
        {
            <div class="d-flex justify-content-between align-items-center mt-4 border-top pt-3">
                <div class="small text-muted">
                    Showing page <strong>@currentPage</strong> of <strong>@totalPages</strong>
                </div>
                <nav>
                    <ul class="pagination pagination-sm m-0">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link rounded-start-3" asp-action="Approval" asp-route-page="@(currentPage - 1)" asp-route-searchString="@ViewBag.SearchString">Previous</a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="Approval" asp-route-page="@i" asp-route-searchString="@ViewBag.SearchString">@i</a>
                            </li>
                        }
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link rounded-end-3" asp-action="Approval" asp-route-page="@(currentPage + 1)" asp-route-searchString="@ViewBag.SearchString">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@* --- ENHANCED PREVIEW MODAL (IMAGE + PDF) --- *@
<div class="modal fade" id="previewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-header border-0 pb-0 bg-white">
                <h6 class="fw-bold m-0 text-muted" id="previewFileName">Attachment Preview</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3 text-center">
                <img id="previewImage" src="" class="img-fluid rounded-3 d-none shadow-sm" style="max-height: 75vh;" />

                <div id="pdfContainer" class="d-none">
                    <iframe id="previewPdf" src="" width="100%" height="600px" style="border: none; border-radius: 8px;"></iframe>
                </div>

                <div class="mt-3 pt-3 border-top d-flex justify-content-center gap-2">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Close</button>
                    <a id="downloadLink" href="" download class="btn btn-primary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-download me-2"></i>Download Original
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@* --- DETAIL MODAL --- *@
<div class="modal fade" id="detailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-bottom-0 pt-4 px-4">
                <h5 class="fw-bold m-0 text-primary"><i class="bi bi-info-circle me-2"></i>Review Leave Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body px-4 pb-4">
                <div id="modalLoading" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
                <div id="modalContent" class="d-none">
                    <div class="bg-light p-3 rounded-3 mb-3">
                        <div class="row mb-2">
                            <div class="col-5 text-muted small">Employee:</div>
                            <div class="col-7 fw-bold" id="lblEmployee"></div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-5 text-muted small">Leave Type:</div>
                            <div class="col-7 fw-bold"><span class="badge bg-primary" id="lblType"></span></div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-5 text-muted small">Duration:</div>
                            <div class="col-7 small" id="lblDates"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="small fw-bold text-secondary mb-2">Staff Remarks:</label>
                        <div class="p-3 rounded-3 small text-dark border-start border-4 border-primary"
                             id="lblReason"
                             style="background-color: #ebf2ff; min-height: 60px;">
                        </div>
                    </div>

                    <div class="mb-4 d-none" id="modalAttachmentSection">
                        <label class="small fw-bold text-secondary mb-2">Medical Proof (Attached):</label>
                        <div id="attachmentLink"></div>
                    </div>

                    <hr class="text-muted opacity-25">

                    <form action="/Leave/UpdateStatus" method="post">
                        <input type="hidden" name="id" id="txtLeaveId" />
                        <label class="small fw-bold text-secondary mb-2">Action Status:</label>
                        <select name="status" id="ddlStatus" class="form-select border-primary-subtle py-2 mb-4 shadow-sm">
                            <option value="Pending">Pending</option>
                            <option value="Approve">Approve</option>
                            <option value="Reject">Reject</option>
                        </select>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 shadow-sm fw-bold">Submit Decision</button>
                            <button type="button" class="btn btn-light w-100 py-2 rounded-3" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-row:hover {
        background-color: #f8f9ff !important;
        transition: 0.2s;
    }

    .table-primary-subtle {
        background-color: #eef4ff !important;
    }

    .avatar-sm {
        border: 1px solid #dee2e6;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Enhanced Preview Function for Images and PDFs
        function previewImage(path) {
            if (!path) return;

            const imgElement = document.getElementById('previewImage');
            const pdfContainer = document.getElementById('pdfContainer');
            const pdfElement = document.getElementById('previewPdf');
            const downloadLink = document.getElementById('downloadLink');
            const fileNameDisplay = document.getElementById('previewFileName');

            // Reset visibility
            imgElement.classList.add('d-none');
            pdfContainer.classList.add('d-none');
            imgElement.src = "";
            pdfElement.src = "";

            // Set download link and title
            downloadLink.href = path;
            fileNameDisplay.innerText = path.split('/').pop();

            // Detect extension
            const extension = path.split('.').pop().toLowerCase();

            if (extension === 'pdf') {
                pdfElement.src = path;
                pdfContainer.classList.remove('d-none');
            } else {
                imgElement.src = path;
                imgElement.classList.remove('d-none');
            }

            // Show the modal
            var prevModal = new bootstrap.Modal(document.getElementById('previewModal'));
            prevModal.show();
        }

        // Detail View Function
        function viewLeaveDetails(id) {
            var myModal = new bootstrap.Modal(document.getElementById('detailModal'));
            myModal.show();
            document.getElementById('modalLoading').classList.remove('d-none');
            document.getElementById('modalContent').classList.add('d-none');

            fetch(`/Leave/GetDetails/${id}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('txtLeaveId').value = data.leave_ID;
                    document.getElementById('lblEmployee').innerText = data.firstName + ' ' + data.lastName;
                    document.getElementById('lblType').innerText = data.leaveType;
                    document.getElementById('lblDates').innerText = data.startDate + ' to ' + data.endDate;
                    document.getElementById('lblReason').innerText = data.reasons || "No reason provided.";
                    document.getElementById('ddlStatus').value = data.status;

                    const attachmentSection = document.getElementById('modalAttachmentSection');
                    const attachmentLink = document.getElementById('attachmentLink');
                    if (data.attachmentPath) {
                        attachmentSection.classList.remove('d-none');
                        attachmentLink.innerHTML = `<button type="button" onclick="previewImage('${data.attachmentPath}')" class="btn btn-outline-primary btn-sm w-100 py-2 rounded-3"><i class="bi bi-eye me-2"></i>Preview MC Attachment</button>`;
                    } else {
                        attachmentSection.classList.add('d-none');
                    }

                    document.getElementById('modalLoading').classList.add('d-none');
                    document.getElementById('modalContent').classList.remove('d-none');
                })
                .catch(err => {
                    Swal.fire('Error', 'Could not load details.', 'error');
                    myModal.hide();
                });
        }

        document.addEventListener("DOMContentLoaded", function() {
            const selectEl = document.getElementById('employeeSelect');
            const searchInput = document.getElementById('employeeSearchInput');
            const editBtn = document.getElementById('editBtn');
            const originalOptions = Array.from(selectEl.options);

            searchInput.addEventListener('input', function() {
                const filter = searchInput.value.toLowerCase();
                selectEl.innerHTML = '';
                originalOptions.forEach(option => {
                    if (option.text.toLowerCase().includes(filter) || option.value === "") {
                        selectEl.appendChild(option);
                    }
                });
            });

            editBtn.addEventListener('click', function() {
                const selectedId = selectEl.value;
                if (selectedId) {
                    window.location.href = `/Leave/EditEntitlements/${selectedId}`;
                } else {
                    Swal.fire('Note', 'Please select an employee from the dropdown first.', 'info');
                }
            });
        });

        function exportData() {
            const search = document.querySelector('input[name="searchString"]').value;
            const from = document.querySelector('input[name="fromDate"]').value;
            const to = document.querySelector('input[name="toDate"]').value;
            window.location.href = `/Leave/ExportToExcel?searchString=${encodeURIComponent(search)}&fromDate=${from}&toDate=${to}`;
        }
    </script>
}