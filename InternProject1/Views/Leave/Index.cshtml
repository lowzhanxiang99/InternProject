@{
    ViewData["Title"] = "Leave Management";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container-fluid py-4 px-5">
    <div class="mb-4">
        <h2 class="fw-bold text-dark mb-1">Leave Management</h2>
        <p class="text-muted">Apply, track, and approve employee leave</p>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-4 p-md-5">
            <h5 class="fw-bold mb-4">Leave Application</h5>

            <div class="d-grid gap-3">
                <a asp-controller="Leave" asp-action="Apply"
                   class="leave-item active d-flex align-items-center justify-content-between p-4 text-decoration-none rounded-3 shadow-sm">
                    <div class="d-flex align-items-center">
                        <div class="icon-box me-3">
                            <i class="bi bi-check-square"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-bold">Leave Application</h5>
                            <p class="mb-0 small opacity-75">Apply and submit for leave </p>
                        </div>
                    </div>
                    <i class="bi bi-chevron-right fs-4"></i>
                </a>

                <a asp-controller="Leave" asp-action="MyStatus"
                   class="leave-item d-flex align-items-center justify-content-between p-4 text-decoration-none rounded-3 border">
                    <div class="d-flex align-items-center">
                        <div class="icon-box me-3 text-primary">
                            <i class="bi bi-check-square"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-bold text-dark">Check Leave Status</h5>
                            <p class="mb-0 small text-muted">View approval progress and history</p>
                        </div>
                    </div>
                    <i class="bi bi-chevron-right fs-4 text-primary"></i>
                </a>

                <a asp-controller="Leave" asp-action="ApprovalLogin"
                   class="leave-item d-flex align-items-center justify-content-between p-4 text-decoration-none rounded-3 border">
                    <div class="d-flex align-items-center">
                        <div class="icon-box me-3 text-primary">
                            <i class="bi bi-check-square"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-bold text-dark">Leave Approval</h5>
                            <p class="mb-0 small text-muted">Approve or reject employee leave requests</p>
                        </div>
                    </div>
                    <i class="bi bi-chevron-right fs-4 text-primary"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Main Card Styling */
    .rounded-4 {
        border-radius: 1rem !important;
    }

    /* Individual Item Styling */
    .leave-item {
        transition: all 0.3s ease;
        background-color: #fff;
    }

        /* The Blue Active State */
        .leave-item.active {
            background-color: #0d6efd;
            color: #fff !important;
            border-color: #0d6efd;
        }

        /* Hover effect for the white items */
        .leave-item:not(.active):hover {
            background-color: #f8fbff;
            border-color: #0d6efd;
            transform: translateX(8px);
        }

    .icon-box {
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Smooth rounded corners for items */
    .rounded-3 {
        border-radius: 0.75rem !important;
    }
</style>