@model IEnumerable<InternProject1.Models.LeaveRequest>

<div class="container-fluid py-4">
    <div class="card border-0 shadow-sm p-4 rounded-4 bg-white">
        <h5 class="fw-bold mb-4">My Leave Status</h5>

        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="text-secondary small border-bottom">
                    <tr>
                        <th>Request Date</th>
                        <th>Status</th>
                        <th>Period</th>
                        <th>Reason</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="small text-muted">@item.Request_Date?.ToString("dd-MM-yyyy")</td>
                            <td>
                                @if (item.Status == "Approve")
                                {
                                    <span class="small text-success fw-bold"><i class="bi bi-circle-fill me-1"></i> Approved</span>
                                }
                                else if (item.Status == "Reject")
                                {
                                    <span class="small text-danger fw-bold"><i class="bi bi-circle-fill me-1"></i> Rejected</span>
                                }
                                else
                                {
                                    <span class="small text-warning fw-bold"><i class="bi bi-circle-fill me-1"></i> Pending</span>
                                }
                            </td>
                            <td class="small text-muted">
                                @item.Start_Date.ToString("dd MMM") - @item.End_Date.ToString("dd MMM yyyy")
                            </td>
                            <td class="small text-muted">@item.Reason</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>