@{
    ViewData["Title"] = "Submission Failed";
    Layout = "_Layout";
}

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="text-center">
        <h3 class="text-dark fw-bold mb-5 text-start" style="text-decoration: underline; margin-left: -100px;">Leave Application</h3>

        <div class="p-5 rounded-4 shadow-sm mb-4" style="background-color: #FFCDD2; max-width: 600px;">
            <h4 class="fw-bold m-0" style="color: #B71C1C; line-height: 1.5;">
                Submission Failed. Please Try Again. If Still Unable To Submit, Please Seek Assistance.
            </h4>
        </div>

        <a asp-action="Apply" class="btn btn-primary px-5 py-2 rounded-3 shadow-sm" style="background-color: #90CAF9; border: none; color: #0D47A1;">
            Try Again
        </a>
    </div>
</div>