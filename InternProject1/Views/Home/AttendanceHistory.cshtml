@model IEnumerable<InternProject1.Models.Attendance>

@{
    ViewData["Title"] = "Attendance History";
    Layout = "_Layout";
}

<style>
    .bg-purple {
        background-color: #6f42c1 !important;
    }

    .text-purple {
        color: #6f42c1 !important;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(111, 66, 193, 0.05);
    }

    .x-small {
        font-size: 0.75rem;
    }
</style>

<div class="container-fluid py-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Dashboard</a></li>
                    <li class="breadcrumb-item active">Attendance History</li>
                </ol>
            </nav>
            <h4 class="fw-bold">My Attendance Logs</h4>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-secondary small text-uppercase">Date</th>
                            <th class="py-3 text-secondary small text-uppercase">Status</th>
                            <th class="py-3 text-secondary small text-uppercase">Clock In</th>
                            <th class="py-3 text-secondary small text-uppercase">Clock Out</th>
                            <th class="py-3 text-secondary small text-uppercase">Break Time</th>
                            <th class="py-3 text-secondary small text-uppercase">Device Fingerprint</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@item.Date.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (item.Status?.ToLower() == "late")
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Late</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">@(item.Status ?? "Present")</span>
                                        }
                                    </td>
                                    @* Fixed Clock In Formatting *@
                                    <td>@(item.ClockInTime.HasValue? DateTime.Today.Add(item.ClockInTime.Value).ToString("hh:mm tt") : "--:--")</td>

                                    @* Fixed Clock Out Formatting *@
                                    <td>@(item.ClockOutTime.HasValue? DateTime.Today.Add(item.ClockOutTime.Value).ToString("hh:mm tt") : "--:--")</td>

                                    @* Fixed Break Time Formatting to prevent FormatException *@
                                    <td class="text-muted small">
                                        @if (item.TotalBreakTime.HasValue)
                                        {
                                            <span>@((int)item.TotalBreakTime.Value.TotalHours):@item.TotalBreakTime.Value.Minutes.ToString("D2")</span>
                                        }
                                        else
                                        {
                                            <span>00:00</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="small text-dark"><i class="bi bi-geo-alt-fill text-purple me-1"></i> @(item.IPAddress ?? "0.0.0.0")</span>
                                            <span class="x-small text-muted" style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="@item.UserAgent">
                                                <i class="bi bi-laptop me-1"></i> @(item.UserAgent ?? "Unknown Device")
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-calendar-x d-block fs-2 mb-2"></i>
                                    No attendance records found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>