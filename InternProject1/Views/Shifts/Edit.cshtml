@model InternProject1.Models.Shift
@{
    ViewData["Title"] = "Edit Shift";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Edit Shift</h4> <!-- Changed icon -->
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <!-- FIXED: Changed from Create to Edit -->
                        <input type="hidden" asp-for="Shift_ID" /> <!-- Added hidden field for ID -->

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Shift_Name" class="form-label">
                                Shift Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Shift_Name" class="form-control" />
                            <span asp-validation-for="Shift_Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Start_Time" class="form-label">
                                        Start Time <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Start_Time" type="time" class="form-control" />
                                    <span asp-validation-for="Start_Time" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="End_Time" class="form-label">
                                        End Time <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="End_Time" type="time" class="form-control" />
                                    <span asp-validation-for="End_Time" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Is_Default" class="form-check-input"
                                   onchange="toggleDefaultWarning(this)" />
                            <label asp-for="Is_Default" class="form-check-label">
                                Set as default shift for new employees
                            </label>
                            <div id="defaultWarning" class="text-warning mt-1" style="display: none;">
                                <i class="bi bi-exclamation-triangle"></i>
                                Setting this as default will remove default status from any existing default shift.
                            </div>
                        </div>

                        <div class="form-group d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-grow-1 d-flex align-items-center justify-content-center">
                                <i class="bi bi-pencil-square me-2"></i> Save Changes
                            </button>
                            <a asp-action="Manage" class="btn btn-secondary d-flex align-items-center justify-content-center px-4">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleDefaultWarning(checkbox) {
            const warning = document.getElementById('defaultWarning');
            warning.style.display = checkbox.checked ? 'block' : 'none';
        }
    </script>
}