@model List<InternProject1.Models.ShiftSchedule>
@{
    ViewData["Title"] = "Manage Shift Schedules";
    var shiftId = ViewBag.ShiftId;
    var shiftName = ViewBag.ShiftName;
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-calendar-week me-2"></i>
                Schedules for: @shiftName
            </h2>
            <p class="text-muted mb-0">Manage special schedules and exceptions</p>
        </div>
        <div>
            <a asp-action="Manage" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Back to Shifts
            </a>
            <a asp-action="CreateSchedule" asp-route-shiftId="@shiftId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Schedule
            </a>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Schedules Table -->
    <div class="card shadow">
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x" style="font-size: 3rem; color: #6c757d;"></i>
                    <h4 class="mt-3">No Schedules Found</h4>
                    <p class="text-muted">This shift uses default times for all days.</p>
                    <a asp-action="CreateSchedule" asp-route-shiftId="@shiftId"
                       class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Add Your First Schedule
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Schedule Type</th>
                                <th>Date/Day</th>
                                <th>Time</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model.OrderBy(s => s.SpecificDate).ThenBy(s => s.DayOfWeek))
                            {
                                <tr>
                                    <td>
                                        @if (schedule.SpecificDate.HasValue)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-calendar-date"></i> One-Time
                                            </span>
                                        }
                                        else if (schedule.DayOfWeek.HasValue)
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-arrow-repeat"></i> Weekly
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (schedule.SpecificDate.HasValue)
                                        {
                                            <strong>@schedule.SpecificDate.Value.ToString("ddd, MMM dd, yyyy")</strong>
                                        }
                                        else if (schedule.DayOfWeek.HasValue)
                                        {
                                            <strong>@schedule.DayOfWeek.Value.ToString()</strong>
                                            @if (schedule.StartDate.HasValue || schedule.EndDate.HasValue)
                                            {
                                                <br />
                                                <small class="text-muted">
                                                    @if (schedule.StartDate.HasValue && schedule.EndDate.HasValue)
                                                    {
                                                        @:From @schedule.StartDate.Value.ToString("MMM dd") to @schedule.EndDate.Value.ToString("MMM dd")
                                                    }
                                                    else if (schedule.StartDate.HasValue)
                                                    {
                                                        @:Starting @schedule.StartDate.Value.ToString("MMM dd")
                                                    }
                                                    else if (schedule.EndDate.HasValue)
                                                    {
                                                        @:Until @schedule.EndDate.Value.ToString("MMM dd")
                                                    }
                                                </small>
                                            }
                                            else
                                            {
                                                <br />
                                                <small class="text-muted">Every week</small>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @schedule.Start_Time.ToString(@"hh\:mm") - @schedule.End_Time.ToString(@"hh\:mm")
                                    </td>
                                    <td>
                                        @{
                                            var duration = schedule.End_Time - schedule.Start_Time;
                                            var hours = (int)duration.TotalHours;
                                            var minutes = duration.Minutes;
                                            var durationText = $"{hours}h {minutes}m";
                                        }
                                        @durationText
                                        @if (schedule.Is_HalfDay)
                                        {
                                            <br />
                                            <span class="badge bg-warning">Half Day</span>
                                        }
                                    </td>
                                    <td>
                                        @if (schedule.Is_Active)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @schedule.Description
                                    </td>
                                    <td>
                                        <!-- Toggle Active/Inactive -->
                                        <form method="post" asp-action="ToggleScheduleStatus"
                                              asp-route-scheduleId="@schedule.Schedule_ID"
                                              asp-route-shiftId="@shiftId"
                                              class="d-inline">
                                            @if (schedule.Is_Active)
                                            {
                                                <button type="submit" class="btn btn-sm btn-warning"
                                                        title="Deactivate">
                                                    <i class="bi bi-pause"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-success"
                                                        title="Activate">
                                                    <i class="bi bi-play"></i>
                                                </button>
                                            }
                                        </form>

                                        <!-- Delete Button -->
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                onclick="confirmDelete(@schedule.Schedule_ID)"
                                                title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Info Card -->
    <div class="card mt-4 bg-light">
        <div class="card-body">
            <h6 class="card-title mb-3">
                <i class="bi bi-info-circle me-2"></i>How Schedules Work
            </h6>

            <div class="row">
                <div class="col-md-4">
                    <div class="border rounded p-3 mb-3 bg-white">
                        <div class="text-primary fw-bold mb-2">
                            <i class="bi bi-calendar-date me-1"></i>One-Time Dates
                        </div>
                        <small class="text-muted">
                            For specific dates like holidays, events, or special days
                        </small>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="border rounded p-3 mb-3 bg-white">
                        <div class="text-info fw-bold mb-2">
                            <i class="bi bi-arrow-repeat me-1"></i>Weekly Patterns
                        </div>
                        <small class="text-muted">
                            Repeat every week on selected day (e.g., every Saturday)
                        </small>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="border rounded p-3 mb-3 bg-white">
                        <div class="text-secondary fw-bold mb-2">
                            <i class="bi bi-clock me-1"></i>Default Hours
                        </div>
                        <small class="text-muted">
                            Standard shift times when no schedule applies
                        </small>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-3 mb-0 py-2">
                <i class="bi bi-lightbulb"></i>
                <strong>Priority:</strong> One-time dates override weekly patterns for that specific day.
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this schedule?
                <p class="text-muted mt-2">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" asp-action="DeleteSchedule">
                    <input type="hidden" name="scheduleId" id="scheduleIdToDelete" />
                    <input type="hidden" name="shiftId" value="@shiftId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(scheduleId) {
            document.getElementById('scheduleIdToDelete').value = scheduleId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Clear session when navigating away
        document.addEventListener('click', function(e) {
            var link = e.target.closest('a');
            if (link && link.href) {
                var url = new URL(link.href, window.location.origin);
                if (!url.pathname.includes('/Shifts/')) {
                    navigator.sendBeacon('@Url.Action("ClearSession", "Shifts")');
                }
            }
        });
    </script>
}