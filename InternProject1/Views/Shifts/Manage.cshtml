@model IEnumerable<InternProject1.Models.Shift>
@{
    ViewData["Title"] = "Manage Shifts";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Shift Management</h2>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Shift
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Shift Name</th>
                        <th>Time Range</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Default</th>
                        <th>Schedules</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var scheduleCount = ViewBag.ScheduleCounts != null &&
                        ViewBag.ScheduleCounts.ContainsKey(item.Shift_ID)
                        ? ViewBag.ScheduleCounts[item.Shift_ID]
                        : 0;

                        <tr>
                            <td>
                                <strong>@item.Shift_Name</strong>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <br />
                                    <small class="text-muted">@item.Description</small>
                                }
                            </td>
                            <td>@item.Start_Time.ToString(@"hh\:mm") - @item.End_Time.ToString(@"hh\:mm")</td>
                            <td class="text-center">@item.Start_Time.ToString(@"hh\:mm")</td>
                            <td class="text-center">@item.End_Time.ToString(@"hh\:mm")</td>
                            <td>
                                @if (item.Is_Default)
                                {
                                    <span class="badge bg-success">Default</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (scheduleCount > 0)
                                {
                                    <span class="badge bg-info d-inline-flex align-items-center"
                                          data-bs-toggle="tooltip"
                                          title="@scheduleCount active schedule(s)">
                                        <i class="bi bi-calendar-check me-1"></i>@scheduleCount
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary d-inline-flex align-items-center"
                                          data-bs-toggle="tooltip"
                                          title="No schedule">
                                        <i class="bi bi-calendar-x me-1"></i>0
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Shift_ID"
                                   class="btn btn-sm btn-outline-primary" title="Edit Shifts">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a asp-action="ManageSchedules" asp-route-shiftId="@item.Shift_ID"
                                   class="btn btn-sm btn-outline-info"
                                   title="Manage schedule">
                                    <i class="bi bi-calendar-week"></i>
                                </a>

                                @if (!item.Is_Default)
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Shift_ID"
                                       class="btn btn-sm btn-outline-danger" title="Delete Shifts">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-secondary" disabled
                                            title="Cannot delete default shift">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-muted small mt-2">
        <i class="bi bi-info-circle me-1"></i>
        <strong>Tip:</strong> Use the <i class="bi bi-calendar-week text-info"></i> button to set different hours for holidays, weekends, or special events.
    </div>
</div>

@section Scripts {
    <script>
        // Clear session when navigating away from Shifts pages
        document.addEventListener('click', function(e) {
            var link = e.target.closest('a');

            if (link && link.href) {
                var url = new URL(link.href, window.location.origin);

                // If clicking a link that goes outside /Shifts/
                if (!url.pathname.includes('/Shifts/')) {
                    // Clear the session
                    navigator.sendBeacon('@Url.Action("ClearSession", "Shifts")');
                }
            }
        });

        // Also clear on back/forward button
        window.addEventListener('pageshow', function(event) {
            // Check if page was loaded from cache (back button)
            if (event.persisted || (window.performance && window.performance.navigation.type === 2)) {
                // Redirect to login
                window.location.href = '@Url.Action("AdminLogin", "Shifts")';
            }
        });

        // Initialize tooltips
            document.addEventListener('DOMContentLoaded', function() {
                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
            });
    </script>
}