@* Views/Shifts/Dashboard.cshtml *@
@{
    ViewData["Title"] = "Shifts Management";
}

<div class="container mt-4">
    <div class="mb-4">
        <h2 class="card-title mb-2 fw-bold">
            <i class="bi bi-clock"></i> Shifts Management
        </h2>
        <p class="h5 text-muted mb-3 fw-normal">Manage shift schedules and assignments</p>
    </div>

    <div class="row justify-content-center">
        <!-- Card 1: Manage Shifts -->
        <div class="col-md-6 mb-4">
            <div class="card border-1 h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-container mb-3">
                        <div class="icon-circle bg-primary">
                            <i class="bi bi-gear text-white" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                    <h3 class="card-title mb-2">Manage Shifts</h3>
                    <p class="card-text text-muted mb-3">
                        Create, edit, or delete shift schedules. Define working hours for different shifts.
                    </p>
                    <a asp-action="Manage" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i> Go to Manage Shifts
                    </a>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-2">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Currently have @ViewBag.ShiftCount shifts
                    </small>
                </div>
            </div>
        </div>

        <!-- Card 2: Assign Shifts -->
        <div class="col-md-6 mb-4">
            <div class="card border-1 h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-container mb-3">
                        <div class="icon-circle bg-success">
                            <i class="bi bi-people text-white" style="font-size: 2rem;"></i> <!-- Reduced from 2.5rem -->
                        </div>
                    </div>
                    <h3 class="card-title mb-2">Assign Shifts</h3>
                    <p class="card-text text-muted mb-3">
                        Assign shifts to employees. Bulk assignment available for multiple employees.
                    </p>
                    <a asp-action="Assign" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i> Go to Assign Shifts
                    </a>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-2">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        @ViewBag.UnassignedCount employees need shift assignment
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card" style="height: 160px;">
                <div class="card-header bg-light py-2">
                    <h5 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Quick Statistics</h5>
                </div>
                <div class="card-body d-flex align-items-center">
                    <div class="row text-center w-100">
                        <div class="col-md-4">
                            <h3 class="text-primary">@ViewBag.TotalShifts</h3>
                            <p class="text-muted mb-0">Total Shifts</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-success">@ViewBag.AssignedEmployees</h3>
                            <p class="text-muted mb-0">Employees with Shifts</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-warning">@ViewBag.UnassignedCount</h3>
                            <p class="text-muted mb-0">Employees Need Assignment</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 70px; /* Reduced from 80px */
        height: 70px; /* Reduced from 80px */
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 12px; /* Slightly reduced from 15px */
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1); /* Reduced shadow */
        }
</style>