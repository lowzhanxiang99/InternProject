@* Views/Shifts/Dashboard.cshtml *@
@{
    ViewData["Title"] = "Shifts Management";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 text-primary">
            <i class="bi bi-clock"></i> Shifts Management
        </h1>
        <p class="lead text-muted">Manage shift schedules and assignments</p>
    </div>

    <div class="row justify-content-center">
        <!-- Card 1: Manage Shifts -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center p-5">
                    <div class="icon-container mb-4">
                        <div class="icon-circle bg-primary">
                            <i class="bi bi-gear text-white" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                    <h3 class="card-title mb-3">Manage Shifts</h3>
                    <p class="card-text text-muted mb-4">
                        Create, edit, or delete shift schedules. Define working hours for different shifts.
                    </p>
                    <a asp-action="Manage" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i> Go to Manage Shifts
                    </a>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Currently have @ViewBag.ShiftCount shifts
                    </small>
                </div>
            </div>
        </div>

        <!-- Card 2: Assign Shifts -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center p-5">
                    <div class="icon-container mb-4">
                        <div class="icon-circle bg-success">
                            <i class="bi bi-people text-white" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                    <h3 class="card-title mb-3">Assign Shifts</h3>
                    <p class="card-text text-muted mb-4">
                        Assign shifts to employees. Bulk assignment available for multiple employees.
                    </p>
                    <a asp-action="Assign" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i> Go to Assign Shifts
                    </a>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        @ViewBag.UnassignedCount employees need shift assignment
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Quick Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <h3 class="text-primary">@ViewBag.TotalShifts</h3>
                            <p class="text-muted mb-0">Total Shifts</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-success">@ViewBag.AssignedEmployees</h3>
                            <p class="text-muted mb-0">Employees with Shifts</p>
                        </div>
                        <div class="col-md-4">
                            <h3 class="text-warning">@ViewBag.UnassignedCount</h3>
                            <p class="text-muted mb-0">Employees Need Assignment</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
</style>