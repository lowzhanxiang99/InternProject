                // Create a canvas for the circle preview
                const circlePreviewCanvas = document.createElement('canvas');
                circlePreviewCanvas.width = 100;
                circlePreviewCanvas.height = 100;
                const ctx = circlePreviewCanvas.getContext('2d');

                // Create circular clipping path
                ctx.beginPath();
                ctx.arc(50, 50, 50, 0, Math.PI * 2);
                ctx.closePath();
                ctx.clip();

                // Draw the cropped image
                ctx.drawImage(circleCanvas, 0, 0, 100, 100);

                // Convert to image and add to container
                const circleImg = document.createElement('img');
                circleImg.src = circlePreviewCanvas.toDataURL('image/jpeg', 0.9);
