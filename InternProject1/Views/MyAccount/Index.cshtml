        // Update preview function
        function updatePreview() {
            if (cropper) {
                // Circle preview
                const circleCanvas = cropper.getCroppedCanvas({
                    width: 100,
                    height: 100,
                    imageSmoothingEnabled: true,
                    imageSmoothingQuality: 'high'
                });

                // Create circle mask for profile preview
