@model IEnumerable<InternProject1.Models.Claim>

<div class="container-fluid py-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-primary"><i class="bi bi-shield-check me-2"></i>Admin Claim Approval</h4>
            <p class="text-muted small">Review and process pending employee expense claims</p>
        </div>
        <div class="d-flex gap-2">
            <div class="bg-white border rounded px-3 py-1 d-flex align-items-center shadow-sm">
                <span class="text-muted small me-2">Total Pending:</span>
                <span class="fw-bold text-dark">RM @Model.Sum(x => x.Amount).ToString("N2")</span>
            </div>
            <a asp-action="AdminLogout" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-box-arrow-right me-1"></i> Exit Admin Mode
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Employee</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Receipt</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-clipboard-check fs-2 d-block mb-2"></i>
                                    No pending claims to approve.
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@(item.Employee?.FullName ?? "Unknown Employee")</div>
                                    <small class="text-muted">ID: @item.Employee_ID</small>
                                </td>
                                <td>
                                    <span class="badge bg-primary bg-opacity-10 text-primary px-2 py-1">@item.Claim_Type</span>
                                    <div class="small text-muted mt-1">@item.Claim_Date.ToString("dd MMM yyyy")</div>
                                </td>
                                <td class="fw-bold text-dark">RM @item.Amount.ToString("N2")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ReceiptPath))
                                    {
                                        <a href="@item.ReceiptPath" target="_blank" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-eye me-1"></i>View File
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No Receipt</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <form asp-action="ApproveOrReject" method="post" class="d-inline">
                                        <input type="hidden" name="claimId" value="@item.Claim_ID" />
                                        <button type="submit" name="status" value="Approved" class="btn btn-success btn-sm rounded-pill px-3 shadow-sm">
                                            <i class="bi bi-check2"></i> Approve
                                        </button>
                                        <button type="submit" name="status" value="Rejected" class="btn btn-danger btn-sm rounded-pill px-3 shadow-sm ms-1">
                                            <i class="bi bi-x-lg"></i> Reject
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>