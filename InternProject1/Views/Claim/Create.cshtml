@model InternProject1.Models.Claim

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow-sm border-0 p-4">
        <h4 class="fw-bold mb-4">Expense Claim Application</h4>

        @* This helps show errors if the database rejects the save *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label fw-bold">Claim Type</label>
                <select asp-for="Claim_Type" class="form-select" required>
                    <option value="">-- Select Type --</option>
                    <option value="Travel">Travel (Petrol/Toll/Parking)</option>
                    <option value="Meal">Meal</option>
                    <option value="Medical">Medical</option>
                    <option value="Office">Office Expense</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Claim_Type" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Date of Expense</label>
                    <input asp-for="Claim_Date" type="date" class="form-control" required />
                    <span asp-validation-for="Claim_Date" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Amount (RM)</label>
                    <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Description / Reason</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="e.g. Client meeting at Mid Valley" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Upload Receipt (Image/PDF)</label>
                <input type="file" name="receiptFile" class="form-control" accept="image/*,.pdf" required />
                <small class="text-muted">Please ensure the receipt is clear and readable.</small>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Submit Claim</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>

@* These scripts are essential for the 'required' attributes to work before submitting *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}