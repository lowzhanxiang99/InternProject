@model IEnumerable<InternProject1.Models.Claim>

<div class="container-fluid py-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold">Claim Management</h4>
            <p class="text-muted small">Status summary for your expense claims</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> New Claim
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex justify-content-around text-center">
                    <div>
                        <h3 class="fw-bold mb-0">@Model.Count(c => c.Status == "Pending")</h3>
                        <small class="text-warning fw-bold">Pending</small>
                    </div>
                    <div class="border-start ps-4">
                        <h3 class="fw-bold mb-0">@Model.Count(c => c.Status == "Approved")</h3>
                        <small class="text-success fw-bold">Approved</small>
                    </div>
                    <div class="border-start ps-4">
                        <h3 class="fw-bold mb-0">@Model.Count(c => c.Status == "Rejected")</h3>
                        <small class="text-danger fw-bold">Rejected</small>
                    </div>
                </div>
                <div class="mt-3 border-top pt-2">
                    <a asp-action="Index" class="text-decoration-none small">View Claim History <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white p-3 h-100">
                <h5 class="fw-bold">Need help with your Claim?</h5>
                <p class="small opacity-75">Ensure all receipts are clearly photographed and uploaded as JPEG or PDF for faster approval by the Finance team.</p>
                <button class="btn btn-light btn-sm mt-auto w-50" data-bs-toggle="modal" data-bs-target="#guidelinesModal">Read Guidelines</button>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h6 class="mb-0 fw-bold"><i class="bi bi-clock-history me-2"></i>Recent Submissions</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Date</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Receipt</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Applied On</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-2 d-block mb-2"></i>
                                    No claims found. Click "New Claim" to start.
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.Claim_Date.ToString("dd MMM yyyy")</td>
                                <td>
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 px-2 py-1">
                                        @item.Claim_Type
                                    </span>
                                </td>
                                <td class="text-truncate" style="max-width: 200px;">@item.Description</td>
                                <td class="fw-bold text-dark">RM @item.Amount.ToString("N2")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ReceiptPath))
                                    {
                                        <a href="@item.ReceiptPath" target="_blank" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-file-earmark-image"></i> View
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No file</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == "Pending")
                                    {
                                        <span class="badge rounded-pill bg-warning text-dark px-3"><i class="bi bi-hourglass-split me-1"></i> Pending</span>
                                    }
                                    else if (item.Status == "Approved")
                                    {
                                        <span class="badge rounded-pill bg-success px-3"><i class="bi bi-check-lg me-1"></i> Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-danger px-3"><i class="bi bi-x-lg me-1"></i> Rejected</span>
                                    }
                                </td>
                                <td class="text-end pe-4 text-muted small">
                                    @item.CreatedAt.ToString("g")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="guidelinesModal" tabindex="-1" aria-labelledby="guidelinesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white border-0">
                <h5 class="modal-title fw-bold" id="guidelinesModalLabel">
                    <i class="bi bi-book-half me-2"></i> Claim Submission Guidelines
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row g-4">
                    <div class="col-md-6">
                        <h6 class="fw-bold text-primary">1. What is a Claim?</h6>
                        <p class="small text-muted">Reimbursement for personal funds spent on company business. Includes travel (Petrol, Grab), meals, and office supplies.</p>

                        <h6 class="fw-bold text-primary mt-3">2. Submission Process</h6>
                        <ol class="small text-muted">
                            <li>Click <strong>+ New Claim</strong>.</li>
                            <li>Fill in details & Amount.</li>
                            <li>Upload a clear <strong>Receipt</strong>.</li>
                            <li>Submit for Finance review.</li>
                        </ol>
                    </div>
                    <div class="col-md-6 border-start">
                        <h6 class="fw-bold text-danger">3. Receipt Requirements</h6>
                        <ul class="small text-muted">
                            <li>Clear Merchant Name, Date, and Amount.</li>
                            <li>Formats: <strong>JPEG, JPG, PDF</strong>.</li>
                            <li><i class="bi bi-x-circle text-danger me-1"></i> No blurry photos or screenshots.</li>
                        </ul>

                        <h6 class="fw-bold text-primary mt-3">4. Reimbursement</h6>
                        <p class="small text-muted">Approved claims are typically processed within <strong>3 working days</strong>.</p>
                    </div>
                </div>

                <div class="alert alert-warning mt-3 mb-0 py-2 border-0 shadow-sm">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    <small>Mismatched amounts or non-business expenses will be <strong>Rejected</strong>.</small>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Understood</button>
            </div>
        </div>
    </div>
</div>