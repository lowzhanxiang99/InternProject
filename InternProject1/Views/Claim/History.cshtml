@model IEnumerable<InternProject1.Models.Claim>

@{
    ViewData["Title"] = "Claim History (Admin)";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0">Claim History</h2>
        <p class="text-muted">Master record of all processed and pending claims.</p>
    </div>
    <a asp-action="AdminLogout" class="btn btn-outline-danger btn-sm">
        <i class="bi bi-box-arrow-right me-1"></i> Admin Logout
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Claim ID</th>
                        <th>Employee</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No claim records found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">CLM-@item.Claim_ID</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-2 me-2">
                                            <i class="bi bi-person text-secondary"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.Employee?.First_Name</div>
                                            <small class="text-muted">ID: @item.Employee_ID</small>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-light text-dark border">@item.Claim_Type</span></td>
                                <td class="fw-bold text-success">RM @item.Amount.ToString("N2")</td>
                                <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-clock me-1"></i> Pending</span>
                                    }
                                    else if (item.Status == "Approved")
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-lg me-1"></i> Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-x-lg me-1"></i> Rejected</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        @if (!string.IsNullOrEmpty(item.ReceiptPath))
                                        {
                                            <a href="@item.ReceiptPath" target="_blank" class="btn btn-sm btn-outline-secondary" title="View Receipt">
                                                <i class="bi bi-file-earmark-image"></i>
                                            </a>
                                        }
                                        <form asp-action="DeleteClaim" method="post" onsubmit="return confirm('Are you sure you want to delete this record? This action cannot be undone.');">
                                            <input type="hidden" name="id" value="@item.Claim_ID" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger border-start-0 rounded-end">
                                                <i class="bi bi-trash"></i>
                                                }
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>