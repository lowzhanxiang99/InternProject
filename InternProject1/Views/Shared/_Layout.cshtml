@using Microsoft.AspNetCore.Http
@using InternProject1.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext _context
@{
    string profilePicturePath = null;
    var userId = Context.Session.GetInt32("UserID");

    if (userId != null)
    {
        var employee = await _context.Employees
            .Where(e => e.Employee_ID == userId.Value)
            .Select(e => new { e.ProfilePicturePath })
            .FirstOrDefaultAsync();

        profilePicturePath = employee?.ProfilePicturePath;
    }

    // Logic to determine if the Claim menu should be expanded by default
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    bool isClaimActive = currentController == "Claim";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1280">
    <title>@ViewData["Title"] - Alpine Software Solutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
            width: 1280px;
        }

        #wrapper {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        #sidebar-wrapper {
            width: 280px;
            min-height: 100%;
            position: sticky;
            top: 0;
            overflow-y: auto;
            flex-shrink: 0;
            transition: all 0.3s;
        }

        #page-content-wrapper {
            flex: 1;
            overflow-y: auto;
            max-height: 100vh;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .content-container {
            width: 100%;
            max-width: 1100px;
            margin-left: 40px;
            padding: 2rem;
        }

        /* Hide scrollbars */
        #sidebar-wrapper::-webkit-scrollbar,
        #page-content-wrapper::-webkit-scrollbar {
            display: none;
        }

        #sidebar-wrapper,
        #page-content-wrapper {
            scrollbar-width: none;
            -ms-overflow-style: none;
        }

        /* Sidebar Nav Styles */
        .nav-link {
            color: #495057;
            display: flex;
            align-items: center;
            transition: all 0.2s;
        }

            .nav-link.active {
                background-color: #0d6efd !important;
                color: white !important;
                border-radius: 8px;
            }

            .nav-link:hover:not(.active) {
                background-color: #f8f9fa;
                border-radius: 8px;
            }

        /* Submenu Styling */
        .nav-submenu-container {
            background-color: #fbfbfb;
            border-radius: 8px;
            margin-bottom: 5px;
        }

        .nav-submenu-item {
            padding-left: 3.5rem !important;
            font-size: 0.85rem;
            color: #6c757d;
            border-radius: 0 !important;
        }

            .nav-submenu-item.active-sub {
                color: #0d6efd !important;
                font-weight: bold;
            }

        .profile-pic-container {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            overflow: hidden;
            border: 2px solid #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }

        .profile-pic {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .qr-sidebar-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 15px;
            margin-top: 20px;
            border: 1px dashed #dee2e6;
        }

        .sidebar-logo {
            max-width: 100%;
            height: auto;
            display: block;
        }

        /* PRINT LOGIC: Hides Sidebar */
        @@media print {
            #sidebar-wrapper {
                display: none !important;
            }

            #page-content-wrapper {
                width: 100% !important;
                margin: 0 !important;
                padding: 0 !important;
                overflow: visible !important;
                display: block !important;
            }

            .content-container {
                margin: 0 !important;
                padding: 0 !important;
                max-width: 100% !important;
            }

            body, html {
                width: auto !important;
                height: auto !important;
                overflow: visible !important;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-white border-end shadow-sm" id="sidebar-wrapper">

            <div class="sidebar-heading p-4">
                <img src="~/images/Alpine Logo.png" alt="Alpine Software Solutions" class="sidebar-logo" />
            </div>

            <div class="list-group list-group-flush px-3">
                <div class="text-center py-4 mb-1">
                    <div class="profile-pic-container mx-auto mb-2 shadow-sm" style="width: 80px; height: 80px; border: 2px solid #f8f9fa;">
                        @if (!string.IsNullOrEmpty(profilePicturePath))
                        {
                            <img src="@profilePicturePath" alt="Profile" class="profile-pic" />
                        }
                        else
                        {
                            <i class="bi bi-person text-secondary fs-1"></i>
                        }
                    </div>
                    <h6 class="fw-bold mb-0">@(Context.Session.GetString("UserName") ?? "Guest")</h6>
                    <small class="text-muted">ID: @userId</small>
                </div>

                <a asp-controller="Home" asp-action="Index"
                   class="nav-link p-3 mb-1 @(currentController == "Home" ? "active" : "")">
                    <i class="bi bi-grid-fill me-2"></i> Dashboard
                </a>

                <div class="mb-1">
                    <a class="nav-link p-3 d-flex justify-content-between align-items-center @(isClaimActive ? "fw-bold text-primary" : "")"
                       data-bs-toggle="collapse" href="#claimSubmenu" role="button" aria-expanded="@(isClaimActive ? "true" : "false")">
                        <span><i class="bi bi-cash-stack me-2"></i> Claims</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse @(isClaimActive ? "show" : "") nav-submenu-container" id="claimSubmenu">
                        <ul class="nav flex-column">
                            <li>
                                <a asp-controller="Claim" asp-action="Index"
                                   class="nav-link nav-submenu-item py-2 @(currentController == "Claim" && currentAction == "Index" ? "active-sub" : "")">
                                    Claim Application
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Claim" asp-action="AdminLogin"
                                   class="nav-link nav-submenu-item py-2 @(currentController == "Claim" && (currentAction == "AdminLogin" || currentAction == "AdminApproval") ? "active-sub" : "")">
                                    Admin Approval
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <hr class="my-2 opacity-25" />

                <a asp-controller="Attendance" asp-action="Index"
                   class="nav-link p-3 mb-1 @(currentController == "Attendance" ? "active" : "")">
                    <i class="bi bi-clock-history me-2"></i> Check-in & Out
                </a>

                <a asp-controller="Leave" asp-action="Index"
                   class="nav-link p-3 mb-1 @(currentController == "Leave" ? "active" : "")">
                    <i class="bi bi-calendar2-check me-2"></i> Leave Application
                </a>

                <a asp-controller="AttendanceReport" asp-action="AdminLogin"
                   class="nav-link p-3 mb-1 @(currentController == "AttendanceReport" ? "active" : "")">
                    <i class="bi bi-file-earmark-bar-graph me-2"></i> Attendance Report
                </a>

                <a asp-controller="Monitoring" asp-action="AdminLogin"
                   class="nav-link p-3 mb-1 @(currentController == "Monitoring" ? "active" : "")">
                    <i class="bi bi-people me-2"></i> Employee Attendance Monitoring
                </a>

                <a asp-controller="Shifts" asp-action="Index"
                   class="nav-link p-3 mb-1 @(currentController == "Shifts" ? "active" : "")">
                    <i class="bi bi-clock me-2"></i> Shifts Management
                </a>

                <a asp-controller="MyAccount" asp-action="Index"
                   class="nav-link p-3 mb-1 @(currentController == "MyAccount" ? "active" : "")">
                    <i class="bi bi-person-circle me-2"></i> My Account
                </a>

                <hr />

                @if (userId != null)
                {
                    <div class="qr-sidebar-card text-center">
                        <p class="small fw-bold mb-2">My Clock-In Code</p>
                        <img src="@Url.Action("Generate", "QRCode", new { employeeId = userId })"
                             alt="QR Code" class="img-fluid rounded shadow-sm" style="max-width: 120px;" />
                        <div class="mt-2">
                            <small class="text-muted" style="font-size: 0.7rem;">Show to Tablet to Clock-In</small>
                        </div>
                    </div>
                }

                <a asp-controller="Account" asp-action="Logout" class="nav-link p-3 mt-3 text-danger border-top">
                    <i class="bi bi-box-arrow-left me-2"></i> Logout
                </a>
            </div>
        </div>

        <div id="page-content-wrapper" class="flex-grow-1 bg-light">
            <div class="content-container">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>