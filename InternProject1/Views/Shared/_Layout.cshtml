@using Microsoft.AspNetCore.Http
@using InternProject1.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext _context
@{
    string profilePicturePath = null;
    var userId = Context.Session.GetInt32("UserID");

    if (userId != null)
    {
        var employee = await _context.Employees
            .Where(e => e.Employee_ID == userId.Value)
            .Select(e => new { e.ProfilePicturePath })
            .FirstOrDefaultAsync();

        profilePicturePath = employee?.ProfilePicturePath;
    }

    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

    bool isClaimActive = currentController == "Claim";
    bool isAdminControlActive = currentController == "AttendanceReport" ||
                                currentController == "Monitoring" ||
                                currentController == "Shifts";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1280">
    <title>@ViewData["Title"] - Alpine Software Solutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
            width: 1280px;
        }

        #wrapper {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        #sidebar-wrapper {
            width: 280px;
            min-height: 100%;
            position: sticky;
            top: 0;
            overflow-y: auto;
            flex-shrink: 0;
            transition: all 0.3s;
        }

        #page-content-wrapper {
            flex: 1;
            overflow-y: auto;
            max-height: 100vh;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .content-container {
            width: 100%;
            max-width: 1100px;
            margin-left: 40px;
            padding: 2rem;
        }

        #sidebar-wrapper::-webkit-scrollbar,
        #page-content-wrapper::-webkit-scrollbar {
            display: none;
        }

        #sidebar-wrapper,
        #page-content-wrapper {
            scrollbar-width: none;
            -ms-overflow-style: none;
        }

        .nav-link {
            color: #495057;
            display: flex;
            align-items: center;
            transition: all 0.2s;
            text-decoration: none;
        }

            .nav-link.active {
                background-color: #0d6efd !important;
                color: white !important;
                border-radius: 8px;
            }

            .nav-link:hover:not(.active) {
                background-color: #f8f9fa;
                border-radius: 8px;
            }

        .nav-submenu-container {
            background-color: #fbfbfb;
            border-radius: 8px;
            margin-bottom: 5px;
        }

        .nav-submenu-item {
            padding-left: 3.5rem !important;
            font-size: 0.85rem;
            color: #6c757d;
            border-radius: 0 !important;
        }

            .nav-submenu-item.active-sub {
                color: #0d6efd !important;
                font-weight: bold;
            }

        .profile-pic-container {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            overflow: hidden;
            border: 2px solid #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }

        .profile-pic {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .qr-sidebar-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 15px;
            margin: 10px;
            border: 1px dashed #dee2e6;
        }

        .sidebar-logo {
            max-width: 100%;
            height: auto;
            display: block;
        }

        .pulse-dot {
            width: 8px;
            height: 8px;
            background-color: #28a745;
            border-radius: 50%;
            display: inline-block;
            margin-left: 8px;
            animation: pulse-animation 2s infinite;
        }

        @@keyframes pulse-animation {
            0% {
                transform: scale(0.95);
                box-shadow: 0 0 0 0 rgba(40, 167, 69, 0.7);
            }

            70% {
                transform: scale(1);
                box-shadow: 0 0 0 5px rgba(40, 167, 69, 0);
            }

            100% {
                transform: scale(0.95);
                box-shadow: 0 0 0 0 rgba(40, 167, 69, 0);
            }
        }

        /* Custom small arrow for nested collapse */
        .extra-small {
            font-size: 0.65rem;
        }
    </style>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-white border-end shadow-sm" id="sidebar-wrapper">

            <div class="sidebar-heading p-4">
                <img src="~/images/Alpine_Logo.png" alt="Alpine Software Solutions" class="sidebar-logo" />
            </div>

            <div class="list-group list-group-flush px-3">

                <div class="text-center py-4 mb-1">
                    <div class="profile-pic-container mx-auto mb-2 shadow-sm" style="width: 80px; height: 80px;">
                        @if (!string.IsNullOrEmpty(profilePicturePath))
                        {
                            <img src="@profilePicturePath" alt="Profile" class="profile-pic" />
                        }
                        else
                        {
                            <i class="bi bi-person text-secondary fs-1"></i>
                        }
                    </div>
                    <h6 class="fw-bold mb-0">@(Context.Session.GetString("UserName") ?? "Guest")</h6>
                    <small class="text-muted">ID: @userId</small>
                </div>

                <a asp-controller="Home" asp-action="Index" class="nav-link p-3 mb-1 @(currentController == "Home" ? "active" : "")">
                    <i class="bi bi-grid-fill me-2"></i> Dashboard
                </a>

                <a asp-controller="Attendance" asp-action="Index" class="nav-link p-3 mb-1 @(currentController == "Attendance" ? "active" : "")">
                    <i class="bi bi-clock-history me-2"></i> Check-in & Out
                </a>

                <a asp-controller="Leave" asp-action="Index" class="nav-link p-3 mb-1 @(currentController == "Leave" ? "active" : "")">
                    <i class="bi bi-calendar2-check me-2"></i> Leave Application
                </a>

                <a asp-controller="MyAccount" asp-action="Index" class="nav-link p-3 mb-1 @(currentController == "MyAccount" ? "active" : "")">
                    <i class="bi bi-person-circle me-2"></i> My Account
                </a>

                <hr class="my-2 opacity-25" />

                <div class="mb-1">
                    <a class="nav-link p-3 d-flex justify-content-between align-items-center @(isClaimActive ? "fw-bold text-primary" : "")"
                       data-bs-toggle="collapse" href="#claimSubmenu" role="button">
                        <span><i class="bi bi-cash-stack me-2"></i> Claims</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse @(isClaimActive ? "show" : "") nav-submenu-container" id="claimSubmenu">
                        <ul class="nav flex-column">
                            <li><a asp-controller="Claim" asp-action="Index" class="nav-link nav-submenu-item py-2 @(currentAction == "Index" ? "active-sub" : "")">Claim Application</a></li>
                            <li><a asp-controller="Claim" asp-action="History" class="nav-link nav-submenu-item py-2 @(currentAction == "History" ? "active-sub" : "")">Claim History (Admin)</a></li>
                            <li><a asp-controller="Claim" asp-action="AdminApproval" class="nav-link nav-submenu-item py-2 @(currentAction == "AdminApproval" ? "active-sub" : "")">Admin Approval</a></li>
                        </ul>
                    </div>
                </div>

                <div class="mb-1">
                    <a class="nav-link p-3 d-flex justify-content-between align-items-center @(isAdminControlActive ? "fw-bold text-primary" : "")"
                       data-bs-toggle="collapse" href="#adminControlSubmenu" role="button">
                        <span><i class="bi bi-shield-lock me-2"></i> Admin Controller</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse @(isAdminControlActive ? "show" : "") nav-submenu-container" id="adminControlSubmenu">
                        <ul class="nav flex-column">
                            <li><a asp-controller="AttendanceReport" asp-action="AdminLogin" class="nav-link nav-submenu-item py-2">Attendance Report</a></li>
                            <li><a asp-controller="Monitoring" asp-action="AdminLogin" class="nav-link nav-submenu-item py-2">Attendance Monitoring</a></li>
                            <li><a asp-controller="Shifts" asp-action="Index" class="nav-link nav-submenu-item py-2">Shifts Management</a></li>
                        </ul>
                    </div>
                </div>

                @if (userId != null)
                {
                    <div class="mb-1">
                        <a class="nav-link p-3 d-flex justify-content-between align-items-center"
                           data-bs-toggle="collapse" href="#qrSubmenu" role="button">
                            <span><i class="bi bi-qr-code me-2"></i> Login QR Code</span>
                            <i class="bi bi-chevron-down small"></i>
                        </a>
                        <div class="collapse nav-submenu-container" id="qrSubmenu">

                            <div class="qr-sidebar-card text-center">
                                <p class="small fw-bold mb-2">My Clock-In Code</p>
                                <img src="@Url.Action("Generate", "QRCode", new { employeeId = userId })" alt="QR Code" class="img-fluid rounded" style="max-width: 100px;" />
                                <div class="mt-2 text-muted" style="font-size: 0.65rem;">Show to Tablet to Clock-In</div>
                            </div>

                            <div class="px-3 pb-3">
                                <hr class="my-2 opacity-25" />
                                <a class="nav-link p-0 d-flex justify-content-between align-items-center text-primary fw-bold"
                                   data-bs-toggle="collapse" href="#techSupportCollapse" role="button" style="font-size: 0.85rem;">
                                    <span><i class="bi bi-headset me-2"></i> Technical Support</span>
                                    <i class="bi bi-chevron-down extra-small"></i>
                                </a>

                                <div class="collapse mt-2" id="techSupportCollapse">
                                    <div class="mb-2">
                                        <small class="d-block fw-bold text-dark" style="font-size: 0.75rem;">IT Department:</small>
                                        <small class="text-muted d-block" style="font-size: 0.7rem;">Low Zhan Xiang, Chong Zhi Yi</small>
                                    </div>
                                    <div class="mb-2">
                                        <small class="d-block fw-bold text-dark" style="font-size: 0.75rem;">Phone:</small>
                                        <a href="tel:01112345678" class="text-decoration-none small text-dark" style="font-size: 0.7rem;">011-12345678</a>
                                    </div>
                                    <div>
                                        <small class="d-block fw-bold text-dark" style="font-size: 0.75rem;">Email:</small>
                                        <a href="https://mail.google.com/mail/?view=cm&fs=1&to=lowzhanxiang99@gmail.com&su=Support ID: @userId"
                                           target="_blank" class="text-decoration-none small text-primary" style="font-size: 0.7rem;">
                                            lowzhanxiang99@gmail.com
                                        </a>
                                    </div>
                                    <div>
                                        <a asp-controller="Home" asp-action="FAQ" class="nav-link p-0 d-flex align-items-center text-success fw-bold mt-2" style="font-size: 0.85rem;">
                                            <i class="bi bi-question-circle me-2"></i> FAQ
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <a asp-controller="Account" asp-action="Logout" class="nav-link p-3 mt-3 text-danger border-top">
                    <i class="bi bi-box-arrow-left me-2"></i> Logout
                </a>
            </div>
        </div>

        <div id="page-content-wrapper" class="flex-grow-1 bg-light">
            <div class="content-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="text-dark fw-bold mb-0">System Control</h4>
                    <div class="position-relative" style="width: 320px;">
                        <div class="input-group shadow-sm">
                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                            <input type="text" id="functionSearch" class="form-control border-start-0" placeholder="Search for a page...">
                        </div>
                        <div id="searchResults" class="list-group position-absolute shadow w-100 mt-1 d-none" style="z-index: 1050; max-height: 300px; overflow-y: auto;"></div>
                    </div>
                </div>
                <main role="main">@RenderBody()</main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const functions = [
                { name: "Dashboard", url: '@Url.Action("Index", "Home")', icon: "bi-grid-fill" },
                { name: "Check-in & Out", url: '@Url.Action("Index", "Attendance")', icon: "bi-clock-history" },
                { name: "Leave Application", url: '@Url.Action("Index", "Leave")', icon: "bi-calendar2-check" },
                { name: "My Account", url: '@Url.Action("Index", "MyAccount")', icon: "bi-person-circle" },
                { name: "Claim Application", url: '@Url.Action("Index", "Claim")', icon: "bi-file-earmark-plus" },
                { name: "Claim History", url: '@Url.Action("History", "Claim")', icon: "bi-clock-history" },
                { name: "Admin Approval", url: '@Url.Action("AdminApproval", "Claim")', icon: "bi-check2-square" },
                { name: "Attendance Report", url: '@Url.Action("AdminLogin", "AttendanceReport")', icon: "bi-file-earmark-bar-graph" },
                { name: "Attendance Monitoring", url: '@Url.Action("AdminLogin", "Monitoring")', icon: "bi-people" },
                { name: "Shifts Management", url: '@Url.Action("Index", "Shifts")', icon: "bi-clock" }
            ];

            const searchInput = document.getElementById('functionSearch');
            const resultsDiv = document.getElementById('searchResults');

            searchInput.addEventListener('input', function () {
                const query = this.value.toLowerCase();
                resultsDiv.innerHTML = '';
                if (query.length > 0) {
                    const filtered = functions.filter(f => f.name.toLowerCase().includes(query));
                    if (filtered.length > 0) {
                        resultsDiv.classList.remove('d-none');
                        filtered.forEach(f => {
                            const item = document.createElement('a');
                            item.href = f.url;
                            item.className = "list-group-item list-group-item-action";
                            item.innerHTML = `<i class="bi ${f.icon} me-2 text-primary"></i> ${f.name}`;
                            resultsDiv.appendChild(item);
                        });
                    } else { resultsDiv.classList.add('d-none'); }
                } else { resultsDiv.classList.add('d-none'); }
            });

            document.addEventListener('click', function (e) {
                if (!searchInput.contains(e.target) && !resultsDiv.contains(e.target)) {
                    resultsDiv.classList.add('d-none');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>