<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4 shadow-sm" style="width: 400px; border-radius: 15px;">
        <h4 class="fw-bold text-primary">Reset Password</h4>
        <p class="text-muted small">Enter your email to reset your account credentials.</p>

        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label class="form-label small fw-bold">Email ID</label>
                <input type="email" name="email" class="form-control" placeholder="Enter Email ID" required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger py-2 small">@ViewBag.Error</div>
            }

            <button type="submit" class="btn btn-primary w-100 fw-bold py-2 shadow-sm">SEND RESET LINK</button>
            <div class="text-center mt-3">
                <a asp-action="Login" class="small text-decoration-none">Back to Login</a>
            </div>
        </form>
    </div>
</div>