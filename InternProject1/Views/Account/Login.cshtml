@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Alpine Software Solutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="https://unpkg.com/html5-qrcode"></script>

    <style>
        body {
            background-color: #e3f2fd;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        .blue-section {
            background: linear-gradient(135deg, #90caf9 0%, #42a5f5 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-container {
            background-color: #f8fbff;
            padding: 2rem;
        }

        .h-100-vh {
            height: 100vh;
        }

        /* Tab Styling */
        .nav-pills .nav-link {
            color: #6c757d;
            font-weight: 600;
            padding: 10px;
            transition: 0.3s;
            cursor: pointer;
        }

            .nav-pills .nav-link.active {
                background-color: #42a5f5 !important;
                box-shadow: 0 4px 12px rgba(66, 165, 245, 0.3);
                color: white !important;
            }

        /* QR Scanner Animation */
        .qr-wrapper {
            width: 280px;
            height: 280px;
            background: #000;
            position: relative;
            margin: 0 auto;
            border-radius: 20px;
            overflow: hidden;
            border: 4px solid #fff;
        }

        .scanner-laser {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: #42a5f5;
            box-shadow: 0 0 15px 5px rgba(66, 165, 245, 0.5);
            z-index: 10;
            animation: scanning 2.5s infinite linear;
        }

        @@keyframes scanning {
            0% {
                top: 0%;
            }

            50% {
                top: 100%;
            }

            100% {
                top: 0%;
            }
        }

        .branding-logo {
            max-width: 280px;
            height: auto;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <div class="container-fluid h-100-vh">
        <div class="row h-100">
            <div class="col-md-6 form-container d-flex align-items-center">
                <div class="w-100 mx-auto" style="max-width: 420px;">

                    <div class="text-center mb-4">
                        <h2 class="fw-bold mb-0">Login</h2>
                        <p class="text-muted small">Please enter your Attendance credentials.</p>
                    </div>

                    <ul class="nav nav-pills nav-justified bg-white shadow-sm rounded-pill p-1 mb-4" id="loginTab" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active rounded-pill" id="email-tab" data-bs-toggle="tab" data-bs-target="#email-pane" type="button">
                                <i class="bi bi-envelope-fill me-2"></i>Email
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link rounded-pill" id="qr-tab" data-bs-toggle="tab" data-bs-target="#qr-pane" type="button">
                                <i class="bi bi-qr-code-scan me-2"></i>QR Code
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="email-pane">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show small" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.ErrorMessage
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            <form asp-controller="Account" asp-action="Login" method="post">
                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Email ID</label>
                                    <input name="email" type="email" class="form-control shadow-sm" placeholder="Enter Email ID" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Password</label>
                                    <input name="password" type="password" class="form-control shadow-sm" placeholder="Password" required />
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="remember">
                                        <label class="form-check-label small text-muted" for="remember">Remember me</label>
                                    </div>
                                    <a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none small">Forgot Password?</a>
                                </div>

                                <div class="mb-4 d-flex justify-content-center">
                                    <div class="g-recaptcha" data-sitekey="6Lc_qFYsAAAAADvAy359xN_4ssK049bvoMUhIUQN"></div>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">LOGIN</button>

                                <p class="mt-4 text-center small text-muted">
                                    Don't have an account? <a asp-controller="Account" asp-action="Register" class="fw-bold text-decoration-none">Register here</a>
                                </p>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="qr-pane">
                            <div class="text-center">
                                <div class="qr-wrapper mb-3">
                                    <div class="scanner-laser"></div>
                                    <div id="qr-reader" style="width: 100%;"></div>
                                </div>
                                <p class="small text-muted">Align your QR code within the frame</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 blue-section d-none d-md-flex">
                <div class="text-center p-5 border border-white border-opacity-25 rounded-5 bg-white bg-opacity-10 shadow-lg" style="backdrop-filter: blur(10px);">
                    <img src="~/images/Alpine_Logo.png" alt="Alpine Logo" class="branding-logo" />
                    <div class="bg-white mx-auto mb-4" style="height: 2px; width: 60px;"></div>
                    <p class="fst-italic fs-5 text-white">"Attendance is the first step to success,<br>be present to win."</p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        var html5QrcodeScanner;
        $('#qr-tab').on('shown.bs.tab', function () {
            html5QrcodeScanner = new Html5QrcodeScanner("qr-reader", { fps: 10, qrbox: 250 });
            html5QrcodeScanner.render((decodedText) => {
                window.location.href = '@Url.Action("Scan", "Account")?qrData=' + decodedText;
                html5QrcodeScanner.clear();
            });
        });
        $('#email-tab').on('shown.bs.tab', function () {
            if (html5QrcodeScanner) { html5QrcodeScanner.clear(); }
        });
    </script>
</body>
</html>