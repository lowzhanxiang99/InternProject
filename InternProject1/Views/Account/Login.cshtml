@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - TimeVIA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #e3f2fd;
            height: 100vh;
            margin: 0;
        }

        .blue-section {
            background: linear-gradient(135deg, #90caf9 0%, #42a5f5 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-container {
            background-color: #f8fbff;
            padding: 5rem;
        }

        /* Ensure the container takes full height */
        .h-100-vh {
            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container-fluid h-100-vh">
        <div class="row h-100">
            <div class="col-md-6 form-container d-flex align-items-center">
                <div class="w-75 mx-auto">
                    <h2 class="fw-bold">Login</h2>
                    <h4 class="text-primary">Welcome Back</h4>
                    <p class="text-muted small">Please enter your Attendance credentials.</p>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">Email ID</label>
                            <input name="email" type="email" class="form-control shadow-sm" placeholder="Enter Email ID" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input name="password" type="password" class="form-control shadow-sm" placeholder="Password" required />
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <div>
                                <input type="checkbox" id="remember" />
                                <label for="remember" class="small">Remember me</label>
                            </div>
                            @* UPDATED: Points to ForgotPassword action in AccountController *@
                            <a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none small">Forgot Password?</a>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">LOGIN</button>
                        <p class="mt-4 text-center small">
                            Don't you have account? <a asp-controller="Account" asp-action="Register" class="fw-bold text-decoration-none">Register here</a>
                        </p>
                    </form>
                </div>
            </div>

            <div class="col-md-6 blue-section d-none d-md-flex">
                <div class="text-center p-5 border border-light rounded-4 bg-white bg-opacity-10 shadow">
                    <h1 class="display-2 fw-bold">TimeVIA</h1>
                    <p class="fst-italic">"Attendance is the first step to success, be present to win."</p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>