<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-5 shadow-sm text-center" style="width: 500px; border-radius: 15px;">
        <i class="bi bi-envelope-at-fill text-primary" style="font-size: 4rem;"></i>
        <h2 class="fw-bold mt-3">Verify your identity</h2>
        <p class="text-muted">We have sent a reset link to <strong>@ViewBag.UserEmail</strong>. Please click the button below to confirm.</p>

        <div class="p-3 my-4" style="background-color: #f1f8ff; border: 1px dashed #007bff; border-radius: 10px;">
            <p class="small text-secondary mb-2">[Simulation] Click the button below to mimic opening your email:</p>
            <a href="@ViewBag.SimulatedLink" class="btn btn-primary fw-bold px-4">Confirm Email & Reset Password</a>
        </div>

        <a asp-action="Login" class="text-decoration-none small">Cancel and return to login</a>
    </div>
</div>