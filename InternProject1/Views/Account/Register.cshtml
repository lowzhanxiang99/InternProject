@model InternProject1.Models.Employee

@{
    Layout = null; // This removes the top menu to match your design
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body { background-color: #e3f2fd; height: 100vh; margin: 0; }
        .blue-section {
            background: linear-gradient(135deg, #90caf9 0%, #42a5f5 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .form-container { background-color: #f8fbff; padding: 3rem; }
        .logo-box {
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 20px;
            padding: 50px;
            text-align: center;
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-md-6 form-container d-flex align-items-center">
                <div class="w-75 mx-auto">
                    <h2 class="fw-bold">Register</h2>
                    <p class="text-muted">Welcome! Please fill in the information to create your account.</p>

                    <form asp-action="Register" method="post">
                        <div class="row mb-3">
                            <div class="col"><label>First Name</label><input asp-for="First_Name" class="form-control" /></div>
                            <div class="col"><label>Last Name</label><input asp-for="Last_Name" class="form-control" /></div>
                        </div>
                        <div class="mb-3"><label>Email ID</label><input asp-for="Employee_Email" class="form-control" /></div>
                        <div class="row mb-3">
                            <div class="col"><label>Password</label><input asp-for="Password" type="password" class="form-control" /></div>
                            <div class="col"><label>Branch</label><input asp-for="Branch" class="form-control" /></div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-3">REGISTER</button>
                        <p class="mt-3 text-center">Already have account? <a asp-action="Login">Login here</a></p>
                    </form>
                </div>
            </div>
            <div class="col-md-6 blue-section">
                <div class="logo-box">
                    <h1 class="display-2 fw-bold">TimeVIA</h1>
                    <p class="fst-italic">"Attendance is the first step to success, be present to win."</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>