@model IEnumerable<InternProject1.Models.Attendance>
@{
    ViewData["Title"] = "Employee Record";

    // Strictly count how many rows in the current filtered list have "Leave" status
    var totalLeaveDays = Model?.Count(m => m.Status == "Leave") ?? 0;
    var currentMonth = ViewBag.SelectedMonth ?? "January 2026";
}

<div class="container-fluid p-0" style="background-color: #f8f9fa; min-height: 100vh;">
    @* Header Section *@
    <div class="text-center py-3 mb-4" style="background-color: #BDD2E7; border-bottom: 2px solid #a5bed9;">
        <h5 class="fw-bold m-0">Detailed Attendance Log</h5>
        <small class="fw-bold text-primary">@ViewBag.EmployeeName</small>
    </div>

    <div class="px-4">
        @* Quick Stats & Month Selector *@
        <div class="row g-3 mb-4 align-items-end">
            <div class="col-md-3">
                <div class="p-2 shadow-sm border-0" style="background-color: #ffffff; border-radius: 10px; border-left: 4px solid #99CCFF !important;">
                    <p class="small text-muted mb-0">Total Leaves (@currentMonth)</p>
                    <h4 class="fw-bold m-0">@totalLeaveDays</h4>
                </div>
            </div>

            @* Monthly Dropdown Selector *@
            <div class="col-md-3">
                <label class="small fw-bold text-muted mb-1">Select Month to View:</label>
                <div class="dropdown">
                    <button class="btn btn-white border shadow-sm dropdown-toggle w-100 text-start" type="button" id="monthDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="border-radius: 8px;">
                        <i class="bi bi-calendar3 me-2 text-primary"></i> @currentMonth
                    </button>
                    <ul class="dropdown-menu shadow w-100" aria-labelledby="monthDropdown" style="max-height: 300px; overflow-y: auto;">
                        @for (int i = 1; i <= 12; i++)
                        {
                            var monthOption = new DateTime(2026, i, 1).ToString("MMMM yyyy");
                            <li>
                                <a class="dropdown-item @(monthOption == currentMonth ? "active bg-primary" : "")"
                                   href="@Url.Action("EmployeeDetails", new { id = ViewBag.EmployeeId, month = monthOption })">
                                    @monthOption
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        @* Search and Navigation *@
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="col-md-4">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-0"><i class="bi bi-search"></i></span>
                    <input type="text" id="historySearch" class="form-control border-0" placeholder="Search in this month's logs...">
                </div>
            </div>
            @* Modified Back Link to keep the selected month context *@
            <a href="@Url.Action("Index", "AttendanceReport", new { month = currentMonth })" class="btn btn-sm px-4 shadow-sm" style="background-color: #DDE7F2; border-radius: 10px; font-weight: 500; color: black; text-decoration: none;">
                <i class="bi bi-arrow-left"></i> Back to Report
            </a>
        </div>

        <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 8px;">
            <table class="table align-middle text-center mb-0" id="historyTable">
                <thead style="background-color: #4A77A5; color: white;">
                    <tr class="small fw-bold">
                        <th class="py-3">Date</th>
                        <th>Clock In</th>
                        <th>Clock Out</th>
                        <th>Status / Remarks</th>
                        <th>Work Duration</th>
                    </tr>
                </thead>

                <tbody class="bg-white">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var log in Model)
                        {
                            var isLate = log.Status?.ToLower() == "late";
                            var isLeave = log.Status?.ToLower() == "leave";
                            var isAbsent = log.Status?.ToLower() == "absent";
                            var hasClockIn = log.ClockInTime.HasValue;
                            var hasClockedOut = log.ClockOutTime.HasValue;

                            string duration = "--";
                            if (hasClockIn && hasClockedOut)
                            {
                                var diff = log.ClockOutTime.Value - log.ClockInTime.Value;
                                duration = $"{(int)diff.TotalHours}h {diff.Minutes}m";
                            }

                            <tr class="border-bottom">
                                <td class="py-3 fw-semibold">@log.Date.ToString("dd MMM yyyy")</td>

                                <td>
                                    @if (!isLeave && !isAbsent && hasClockIn)
                                    {
                                        <span class="@(isLate ? "text-danger fw-bold" : "")">
                                            @DateTime.Today.Add(log.ClockInTime.Value).ToString("hh:mm tt")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--:--</span>
                                    }
                                </td>

                                <td>
                                    @if (!isLeave && !isAbsent && hasClockedOut)
                                    {
                                        <span>@DateTime.Today.Add(log.ClockOutTime.Value).ToString("hh:mm tt")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--:--</span>
                                    }
                                </td>

                                <td>
                                    @if (isLeave)
                                    {
                                        <span class="badge" style="background-color: #99CCFF; color: black;">On Leave</span>
                                    }
                                    else if (isLate)
                                    {
                                        <span class="badge" style="background-color: #FFCC00; color: black;">Late Arrival</span>
                                    }
                                    else if (isAbsent)
                                    {
                                        <span class="badge bg-danger">Absent</span>
                                    }
                                    else
                                    {
                                        <span class="badge" style="background-color: #4A77A5; color: white;">Present</span>
                                    }

                                    @if (!isLeave && !isAbsent && hasClockedOut && hasClockIn && (log.ClockOutTime.Value - log.ClockInTime.Value).TotalHours > 9)
                                    {
                                        <div class="small text-success mt-1"><i class="bi bi-plus-circle-fill"></i> Overtime</div>
                                    }
                                </td>

                                <td class="text-secondary fw-bold">@((!isLeave && !isAbsent && hasClockIn && hasClockedOut) ? duration : "--")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="py-5 text-muted">
                                <i class="bi bi-info-circle d-block mb-2" style="font-size: 1.5rem;"></i>
                                No records found for @currentMonth.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Local Table Search Filter
        document.getElementById('historySearch').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll('#historyTable tbody tr');

            rows.forEach(row => {
                let text = row.textContent.toLowerCase();
                // Avoid hiding the "No records" row if it's the only one
                if(!row.classList.contains('no-records-row')) {
                    row.style.display = text.includes(filter) ? "" : "none";
                }
            });
        });
    </script>
}