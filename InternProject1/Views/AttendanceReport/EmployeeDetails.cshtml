@model IEnumerable<InternProject1.Models.Attendance>
@{
    ViewData["Title"] = "Employee Record";
    var totalDays = Model?.Count() ?? 0;
    var lateDays = Model?.Count(m => m.Status == "Late") ?? 0;
}

<div class="container-fluid p-0" style="background-color: #f8f9fa; min-height: 100vh;">
    @* Header Section *@
    <div class="text-center py-3 mb-4" style="background-color: #BDD2E7; border-bottom: 2px solid #a5bed9;">
        <h5 class="fw-bold m-0">Detailed Attendance Log</h5>
        <small class="fw-bold text-primary">@ViewBag.EmployeeName</small>
    </div>

    <div class="px-4">
        @* Quick Stats Cards *@
        <div class="row g-3 mb-4 justify-content-start text-center">
            <div class="col-md-2">
                <div class="p-2 shadow-sm border-0" style="background-color: #ffffff; border-radius: 10px; border-left: 4px solid #4A77A5 !important;">
                    <p class="small text-muted mb-0">Total Records</p>
                    <h4 class="fw-bold m-0">@totalDays</h4>
                </div>
            </div>
            <div class="col-md-2">
                <div class="p-2 shadow-sm border-0" style="background-color: #ffffff; border-radius: 10px; border-left: 4px solid #FFCC00 !important;">
                    <p class="small text-muted mb-0">Late Arrivals</p>
                    <h4 class="fw-bold m-0">@lateDays</h4>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="col-md-4">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-0"><i class="bi bi-calendar-event"></i></span>
                    <input type="text" id="historySearch" class="form-control border-0" placeholder="Filter by date or status...">
                </div>
            </div>
            <a asp-action="Index" class="btn btn-sm px-4 shadow-sm" style="background-color: #DDE7F2; border-radius: 10px; font-weight: 500; color: black; text-decoration: none;">
                <i class="bi bi-arrow-left"></i> Back to Report
            </a>
        </div>

        @* Comprehensive History Table *@
        <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 8px;">
            <table class="table align-middle text-center mb-0" id="historyTable">
                <thead style="background-color: #4A77A5; color: white;">
                    <tr class="small fw-bold">
                        <th class="py-3">Date</th>
                        <th>Clock In</th>
                        <th>Clock Out</th>
                        <th>Status / Remarks</th>
                        <th>Work Duration</th>
                    </tr>
                </thead>

                <tbody class="bg-white">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var log in Model)
                        {
                            var isLate = log.Status == "Late";
                            var isLeave = log.Status == "Leave";
                            var isAbsent = log.Status == "Absent";

                            // Simple Duration Calculation
                            string duration = "--";
                            if (log.ClockOutTime.HasValue && log.ClockInTime.HasValue)
                            {
                                var diff = log.ClockOutTime.Value - log.ClockInTime.Value;
                                duration = $"{(int)diff.TotalHours}h {diff.Minutes}m";
                            }

                            <tr class="border-bottom">
                                <td class="py-3 fw-semibold">@log.Date.ToString("dd MMM yyyy")</td>

                                <td>
                                    @if (isAbsent || isLeave || !log.ClockInTime.HasValue)
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                    else
                                    {
                                        <span class="@(isLate ? "text-danger fw-bold" : "")">
                                            @DateTime.Today.Add(log.ClockInTime.Value).ToString("hh:mm tt")
                                        </span>
                                    }
                                </td>

                                <td>
                                    @(log.ClockOutTime.HasValue? DateTime.Today.Add(log.ClockOutTime.Value).ToString("hh:mm tt") : "N/A")
                                </td>

                                <td>
                                    @if (isLate)
                                    {
                                        <span class="badge" style="background-color: #FFCC00; color: black;">Late Arrival</span>
                                    }
                                    else if (isLeave)
                                    {
                                        <span class="badge" style="background-color: #99CCFF; color: black;">On Leave</span>
                                    }
                                    else if (isAbsent)
                                    {
                                        <span class="badge bg-danger">Absent</span>
                                    }
                                    else
                                    {
                                        <span class="badge" style="background-color: #4A77A5; color: white;">Present</span>
                                    }

                                    @if (log.ClockOutTime.HasValue && log.ClockInTime.HasValue && (log.ClockOutTime.Value - log.ClockInTime.Value).TotalHours > 9)
                                    {
                                        <div class="small text-success mt-1"><i class="bi bi-plus-circle-fill"></i> Overtime</div>
                                    }
                                </td>

                                <td class="text-secondary">@duration</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="py-5 text-muted">No history records found for this employee.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('historySearch').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll('#historyTable tbody tr');

            rows.forEach(row => {
                let text = row.textContent.toLowerCase();
                row.style.display = text.includes(filter) ? "" : "none";
            });
        });
    </script>
}