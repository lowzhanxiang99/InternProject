@model IEnumerable<InternProject1.Models.StaffSummaryViewModel>

<div class="container-fluid p-0">
    <div class="text-center py-3 mb-4" style="background-color: #BDD2E7; border-bottom: 2px solid #a5bed9;">
        <h5 class="fw-bold m-0" style="text-decoration: underline; text-underline-offset: 5px;">Attendance Report</h5>
        <small class="fw-bold">2026 / Jan</small>
    </div>

    <div class="px-4">
        <div class="row g-3 mb-5 justify-content-center text-center">
            <div class="col-md-2">
                <div class="p-3 rounded-4 shadow-sm" style="background-color: #DDE7F2; border-radius: 15px !important;">
                    <p class="small fw-bold mb-1" style="font-size: 0.75rem;">Number Of Working Days</p>
                    <h2 class="fw-bold m-0">22</h2>
                </div>
            </div>
            <div class="col-md-2">
                <div class="p-3 rounded-4 shadow-sm" style="background-color: #DDE7F2; border-radius: 15px !important;">
                    <p class="small fw-bold mb-1" style="font-size: 0.75rem;">Number Of Days Late</p>
                    <h2 class="fw-bold m-0">8</h2>
                </div>
            </div>
            <div class="col-md-2">
                <div class="p-3 rounded-4 shadow-sm" style="background-color: #DDE7F2; border-radius: 15px !important;">
                    <p class="small fw-bold mb-1" style="font-size: 0.75rem;">Number Of Days Of Leave</p>
                    <h2 class="fw-bold m-0">5</h2>
                </div>
            </div>
            <div class="col-md-2">
                <div class="p-3 rounded-4 shadow-sm" style="background-color: #DDE7F2; border-radius: 15px !important;">
                    <p class="small fw-bold mb-1" style="font-size: 0.75rem;">Number Of Absences</p>
                    <h2 class="fw-bold m-0">2</h2>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 8px;">
            <table class="table align-middle text-center mb-0">
                <thead style="background-color: #4A77A5; color: white;">
                    <tr class="small fw-bold">
                        <th class="py-3">Amployees</th>
                        <th>Attendance</th>
                        <th>Late</th>
                        <th>Leave</th>
                        <th>Absent</th>
                        <th>Overtime</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @foreach (var staff in Model)
                    {
                        <tr class="border-bottom">
                            <td class="py-3 fw-semibold" style="color: #4A77A5;">@staff.Name</td>
                            <td class="text-secondary">@staff.AttendanceCount</td>
                            <td class="text-secondary">@staff.LateCount</td>
                            <td class="text-secondary">@staff.LeaveCount</td>
                            <td class="text-secondary">@staff.AbsentCount</td>
                            <td class="text-secondary">@staff.OvertimeCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-end mt-4 d-flex flex-column align-items-end gap-2">
            <button class="btn btn-sm px-4 shadow-sm" style="background-color: #DDE7F2; border-radius: 10px; font-weight: 500; font-size: 0.85rem; border: none;">Convert To Excel</button>
            <button class="btn btn-sm px-4 shadow-sm" style="background-color: #DDE7F2; border-radius: 10px; font-weight: 500; font-size: 0.85rem; border: none;">Convert To PDF</button>
        </div>
    </div>
</div>